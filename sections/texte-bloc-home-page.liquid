<style>
  .Paragraph {
    font-family: Karla
  }
  .centre {
    color: #6e612b;
    text-align: center
  }
  .left-align {
    color: #6e612b;
    text-align: left
  }
  @media screen and (max-width: 767px) {
    .centre {
      font-size: 0.8rem;
      text-align: center
    }
    .left-align {
      font-size: 0.8rem;
      text-align: left
    }
  }
  .bloc-bouton-HP {
    display: flex;
    margin-top: 20px;
    justify-content: center;
    align-items: center
  }
  .bloc-bouton-HP.left-align {
    justify-content: flex-start
  }
  @media screen and (max-width: 767px) {
    .bloc-bouton-HP {
      margin-top: 40px;
      align-items: center
    }
    .bloc-bouton-HP.centre {
      justify-content: center
    }
    .bloc-bouton-HP.left-align {
      justify-content: flex-start
    }
  }
  .bloc-paragraph {
    margin-top: 20px
  }
  .heading-style-h2 {
    font-family: Karla;
    color: #6e612b;
    font-size: 1.5rem;
    line-height: 1;
    font-weight: 400;
    text-transform: uppercase
  }
  /* Style H1 pour mobile sur le 2e heading */
  @media screen and (max-width: 767px) {
    .heading-style-h2 {
      font-size: 2.5rem;
      font-weight: 600;
      line-height: 1.1;
      text-transform: none
    }
  }
  @media screen and (max-width: 479px) {
    .heading-style-h2 {
      font-size: 2rem;
      font-weight: 600;
      line-height: 1.1;
      text-transform: none
    }
  }
  .centre {
    text-align: center
  }
  .left-align {
    text-align: left
  }
  @media screen and (max-width: 767px) {
    .centre {
      font-size: 2rem;
      text-align: center
    }
    .left-align {
      font-size: 2rem;
      text-align: left
    }
  }
  @media screen and (max-width: 479px) {
    .centre {
      font-size: 1.9rem;
      text-align: center
    }
    .left-align {
      font-size: 1.9rem;
      text-align: left
    }
  }
  .bloc-gros-texte {
    margin-top: 10px
  }
  .Button2 {
    padding-right: 30px;
    padding-left: 30px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    background-color: #a6d4f2;
    font-family: Karla;
    color: #f5f2d9;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    display: inline-block;
    padding-top: 12px;
    padding-bottom: 12px
  }
  @media screen and (max-width: 767px) {
    .Button2 {
      font-size: 0.8rem;
      line-height: 1.3;
      text-transform: uppercase
    }
  }
  .bloc-de-texte-wrapper {
    width: 60%
  }
  .bloc-de-texte-wrapper.left-align {
    width: 60%
  }
  @media screen and (max-width: 767px) {
    .bloc-de-texte-wrapper {
      width: 100%;
      padding-right: 40px;
      padding-left: 40px
    }
    .bloc-de-texte-wrapper.centre {
      padding-right: 40px;
      padding-left: 40px
    }
    .bloc-de-texte-wrapper.left-align {
      padding-right: 0;
      padding-left: 0
    }
  }
  .heading-style-h1 {
    font-family: Karla;
    color: #6e612b;
    font-size: 2.8rem;
    line-height: 1.1;
    font-weight: 600
  }
  @media screen and (max-width: 767px) {
    .heading-style-h1 {
      font-size: 2.5rem
    }
  }
  .Section {
    display: flex;
    justify-content: center;
    align-items: center
  }
  .Section.left-align {
    justify-content: flex-start;
    padding-left: 20px
  }
  .centre {
    text-align: center
  }
  .left-align {
    text-align: left
  }
  @media screen and (max-width: 767px) {
    .centre {
      font-size: 1.2rem;
      text-align: center
    }
    .left-align {
      font-size: 1.2rem;
      text-align: left
    }
  }
  @media screen and (max-width: 479px) {
    .centre {
      font-size: 1rem;
      text-align: center
    }
    .left-align {
      font-size: 1rem;
      text-align: left
    }
  }
</style>

{% assign alignment_class = 'centre' %}
{% if section.settings.text_alignment == 'left' %}
  {% assign alignment_class = 'left-align' %}
{% endif %}

<div class="Section {{ alignment_class }}">
  <div class="bloc-de-texte-wrapper {{ alignment_class }}" li-content-for-blocks="">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when '@app' %}
        {% render block %}

      {% when 'sous-titre' %}
        <div class="Bloc-titre-H2" li-block="Sous-titre">
          <h2 class="heading-style-h2 {{ alignment_class }}">
            {{ block.settings.text_heading }}
          </h2>
        </div>

      {% when 'grand-texte' %}
        <div class="bloc-gros-texte" li-block="Grand-texte">
          <h1 class="heading-style-h1 {{ alignment_class }}">
            {{ block.settings.text_heading }}
          </h1>
        </div>

      {% when 'paragraphe' %}
        <div class="bloc-paragraph" li-block="Paragraphe">
          <p class="Paragraph {{ alignment_class }}">
            {{ block.settings.text_paragraph }}
          </p>
        </div>

      {% when 'bouton' %}
        <div class="bloc-bouton-HP {{ alignment_class }}" li-block="Bouton">
          <a class="Button2" href="{{ block.settings.url_link }}">{{ block.settings.text_text }}</a>
        </div>
    {% endcase %}
  {% endfor %}
  </div>
</div>

{% schema %}
{
  "tag": "section",
  "name": "texte-bloc-home-page",
  "class": "Section",
  "settings": [
    {
      "id": "text_alignment",
      "type": "select",
      "label": "Alignement du texte",
      "options": [
        {
          "value": "center",
          "label": "Centré"
        },
        {
          "value": "left",
          "label": "À gauche (padding 20px)"
        }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "name": "Sous-titre",
      "type": "sous-titre",
      "settings": [
        {
          "id": "text_heading",
          "type": "text",
          "label": "Heading",
          "default": "Heading"
        }
      ]
    },
    {
      "name": "Grand-texte",
      "type": "grand-texte",
      "settings": [
        {
          "id": "text_heading",
          "type": "text",
          "label": "Heading",
          "default": "Heading"
        }
      ]
    },
    {
      "name": "Paragraphe",
      "type": "paragraphe",
      "settings": [
        {
          "id": "text_paragraph",
          "type": "text",
          "label": "Paragraph",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla, ut commodo diam libero vitae erat. Aenean faucibus nibh et justo cursus id rutrum lorem imperdiet. Nunc ut sem vitae risus tristique posuere."
        }
      ]
    },
    {
      "name": "Bouton",
      "type": "bouton",
      "settings": [
        {
          "id": "url_link",
          "type": "url",
          "label": "Link"
        },
        {
          "id": "text_text",
          "type": "text",
          "label": "Text",
          "default": "Button Text"
        }
      ]
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "texte-bloc-home-page",
      "category": "Liquify",
      "blocks": [
        {
          "type": "sous-titre"
        },
        {
          "type": "grand-texte"
        },
        {
          "type": "paragraphe"
        },
        {
          "type": "bouton"
        }
      ]
    }
  ]
}
{% endschema %}
