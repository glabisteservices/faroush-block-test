<style>
  .faq-bloc {
    margin-top: 0;
    border-top: 1px solid #6e612b;
  }
  
  .faq-container {
    display: flex;
    border-radius: 15px;
    /* background-color: #f5f2d9; - Fond supprimé */
  }
  
  .faq-container.medium {
    display: block;
  }
  
  .faq-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    border-radius: 15px;
  }
  
  .accordion-toggle {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 70px;
    padding: 15px 0;
    cursor: pointer;
  }
  
  .accordion-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
    transform: rotate(180deg); /* État initial : flèche vers le bas */
  }
  
  .accordion-icon svg {
    width: 100%;
    height: 100%;
    fill: #6e612b;
  }
  
  .accordion-toggle[aria-expanded="true"] .accordion-icon {
    transform: rotate(0deg); /* Quand ouvert : flèche vers le haut */
  }
  
  .faq-reponse {
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
    padding: 0 0;
  }
  
  .faq-reponse.open {
    max-height: 1000px;
    padding: 20px 0;
  }
  
  .heading-style-h4 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1.25rem;
    line-height: 1.2;
    font-weight: 400;
    margin: 0;
    flex: 1;
  }
  
  .accordion-toggle .heading-style-h4 {
    font-weight: 600;
  }
  
  @media screen and (max-width: 767px) {
    .heading-style-h4 {
      font-size: 1.125rem;
    }
  }
  
  .faq-section .heading-style-h1 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 2.8rem;
    line-height: 1;
    font-weight: 600;
    margin: 0 0 30px 0 !important;
    padding-top: 0 !important;
  }
  
  @media screen and (max-width: 767px) {
    .heading-style-h1 {
      font-size: 2.5rem;
    }
  }
  
  .faq-section {
    margin: 40px 0;
    padding: 20px;
  }
  
  @media screen and (max-width: 479px) {
    .faq-section {
      padding: 10px;
    }
  }
  
  .faq-content {
    width: 70%;
  }
  
  .accordion-item {
    position: relative;
    width: 100%;
    /* Bordures supprimées */
  }
  
  /* Suppression des bordures ::before et ::after */
  /*
  .accordion-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #6e612b;
  }
  
  .accordion-item:last-child::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #6e612b;
  }
  */
  
  .right-div-faq {
    width: 50%;
    border-radius: 15px;
    overflow: hidden;
    min-height: 400px; /* Hauteur minimum */
    display: flex;
    /* Maintenant à droite dans l'ordre du DOM */
    order: 2;
  }
  
  .right-div-faq.medium {
    width: 100%;
    margin-top: 20px;
  }
  
  .faq-paragraph {
    font-family: Karla, sans-serif;
    color: #6e612b;
    margin: 0;
    line-height: 1.6;
  }
  
  .faq-paragraph p {
    margin: 0 0 1em 0;
  }
  
  .faq-paragraph p:last-child {
    margin-bottom: 0;
  }
  
  .faq-paragraph h1,
  .faq-paragraph h2,
  .faq-paragraph h3,
  .faq-paragraph h4,
  .faq-paragraph h5,
  .faq-paragraph h6 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    margin: 0 0 0.5em 0;
  }
  
  .faq-paragraph ul,
  .faq-paragraph ol {
    margin: 0 0 1em 0;
    padding-left: 1.5em;
  }
  
  .faq-paragraph li {
    margin-bottom: 0.25em;
  }
  
  .left-div-faq {
    display: flex;
    width: 50%;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 40px 20px;
    min-height: 400px; /* Hauteur minimum pour synchroniser avec l'image */
    /* Maintenant à gauche dans l'ordre du DOM */
    order: 1;
  }
  
  @media screen and (min-width: 1025px) {
    .left-div-faq {
      padding: 0 20px 40px 20px;
    }
  }
  
  .left-div-faq.medium {
    width: 100%;
    padding: 20px;
  }
  
  @media screen and (max-width: 1024px) {
    .faq-content {
      width: 100%;
    }
  }

  @media screen and (max-width: 768px) {
    .faq-container {
      flex-direction: column;
    }
    
    .left-div-faq,
    .right-div-faq {
      width: 100%;
      order: initial; /* Rétablit l'ordre normal sur mobile */
    }
    
    .faq-content {
      width: 100%;
    }
    
    .right-div-faq {
      min-height: auto; /* Supprimer la hauteur minimum sur mobile */
      height: 300px; /* Hauteur fixe sur mobile */
    }
    
    .left-div-faq {
      min-height: auto; /* Supprimer la hauteur minimum sur mobile */
    }
  }
</style>

<div class="faq-container">
  <!-- L'image est maintenant en premier dans le DOM mais s'affiche à gauche grâce à order: 1 -->
  <div class="right-div-faq">
    {% if section.settings.image_image %}
      {{ section.settings.image_image | image_url: width: 1000 | image_tag: class: 'faq-image', alt: section.settings.image_image.alt | default: 'FAQ Image', loading: 'lazy' }}
    {% else %}
      <img class="faq-image" src="{{ 'faq-default-image.jpg' | asset_url }}" alt="FAQ" loading="lazy">
    {% endif %}
  </div>
  
  <!-- Le contenu FAQ est maintenant en deuxième dans le DOM mais s'affiche à droite grâce à order: 2 -->
  <div class="left-div-faq">
    <div class="faq-content">
      <h1 class="heading-style-h1">
        {{ section.settings.text_heading }}
      </h1>
      
      <div style="border-bottom: 1px solid #6e612b;">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when '@app' %}
              {% render block %}
            
            {% when 'faq-question' %}
              <div class="faq-bloc" {{ block.shopify_attributes }}>
                <div class="accordion-item">
                  <div 
                    class="accordion-toggle" 
                    role="button" 
                    tabindex="0" 
                    aria-expanded="false"
                    data-faq-toggle
                  >
                    <h4 class="heading-style-h4">
                      {{ block.settings.text_text }}
                    </h4>
                    <div class="accordion-icon">
                      <svg viewBox="0 0 24 24">
                        <path d="M7 14l5-5 5 5z"/>
                      </svg>
                    </div>
                  </div>
                  
                  <div class="faq-reponse" aria-hidden="true">
                    <div class="faq-paragraph">
                      {{ block.settings.text_paragraph }}
                    </div>
                  </div>
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  'use strict';
  
  function initFAQ() {
    const toggles = document.querySelectorAll('[data-faq-toggle]');
    
    toggles.forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        handleToggle(this);
      });
      
      toggle.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          handleToggle(this);
        }
      });
    });
  }
  
  function handleToggle(element) {
    const content = element.nextElementSibling;
    const isExpanded = element.getAttribute('aria-expanded') === 'true';
    
    // Fermer tous les autres accordéons
    const allToggles = document.querySelectorAll('[data-faq-toggle]');
    allToggles.forEach(function(toggle) {
      if (toggle !== element) {
        toggle.setAttribute('aria-expanded', 'false');
        const otherContent = toggle.nextElementSibling;
        otherContent.classList.remove('open');
        otherContent.setAttribute('aria-hidden', 'true');
      }
    });
    
    // Basculer l'accordéon actuel
    if (isExpanded) {
      element.setAttribute('aria-expanded', 'false');
      content.classList.remove('open');
      content.setAttribute('aria-hidden', 'true');
    } else {
      element.setAttribute('aria-expanded', 'true');
      content.classList.add('open');
      content.setAttribute('aria-hidden', 'false');
    }
  }
  
  // Initialiser quand le DOM est prêt
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initFAQ);
  } else {
    initFAQ();
  }
  
  // Pour Shopify (sections dynamiques)
  if (typeof Shopify !== 'undefined' && Shopify.designMode) {
    document.addEventListener('shopify:section:load', initFAQ);
  }
})();
</script>

