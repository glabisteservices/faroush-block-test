<style>
  .Bouton-Seul {
    padding: 0;
    margin: 0;
  }
  
  .bouton-seul-wrapper {
    display: flex;
    width: 100%;
  }
  
  .bouton-seul-wrapper.align-left {
    justify-content: flex-start;
  }
  
  .bouton-seul-wrapper.align-center {
    justify-content: center;
  }
  
  .bouton-seul-wrapper.align-right {
    justify-content: flex-end;
  }
  
  .Button-2 {
    padding-right: 30px;
    padding-left: 30px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    font-family: Karla;
    font-weight: 500;
    text-transform: uppercase;
    text-decoration: none;
    display: inline-block;
    padding-top: 12px;
    padding-bottom: 12px;
    transition: all 0.1s ease;
    margin: 0 20px;
  }
  
  /* Style bouton plein */
  .Button-2.style-filled {
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    border: 1px solid {{ section.settings.background_color }};
  }
  
  /* Style bouton outline */
  .Button-2.style-outline {
    background-color: transparent;
    color: {{ section.settings.text_color }};
    border: 1px solid {{ section.settings.border_color }};
  }
  
  /* Effet hover */
  .Button-2.style-filled:hover {
    background-color: transparent;
    color: {{ section.settings.hover_text_color }};
    border: 1px solid {{ section.settings.background_color }};
  }
  
  .Button-2.style-outline:hover {
    background-color: {{ section.settings.border_color }};
    color: {{ section.settings.hover_text_color }};
    border: 1px solid {{ section.settings.border_color }};
  }
  
  @media screen and (max-width: 767px) {
    .Button-2 {
      font-size: 0.8rem;
      line-height: 1.3;
      text-transform: uppercase;
    },
    {
      "id": "hover_text_color",
      "type": "select",
      "label": "‚úçÔ∏è Couleur du texte au survol",
      "options": [
        {
          "value": "#ec8451",
          "label": "üß° Orange (#ec8451)"
        },
        {
          "value": "#f5f2d9",
          "label": "ü§ç Cr√®me (#f5f2d9)"
        },
        {
          "value": "#6e612b",
          "label": "ü§é Brun (#6e612b)"
        },
        {
          "value": "#a6d4f2",
          "label": "üíô Bleu clair (#a6d4f2)"
        },
        {
          "value": "#9e8c73",
          "label": "ü§é Beige (#9e8c73)"
        }
      ],
      "default": "#f5f2d9"
    }
  }
</style>

<div class="Bouton-Seul">
  <div class="bouton-seul-wrapper align-{{ section.settings.button_alignment }}">
    <a class="Button-2 style-{{ section.settings.button_style }}" href="{{ section.settings.url_link }}">
      {{ section.settings.text_text }}
    </a>
  </div>
</div>

