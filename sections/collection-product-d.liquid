<style>
  .product_component {
    display: flex;
    width: 100%;
    flex-direction: column;
    grid-auto-columns: 1fr;
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    grid-template-columns: 0.5fr 1fr;
    grid-template-rows: auto;
  }
  .product_component.medium {
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    grid-template-columns: 1fr;
  }
  .product_heading-wrapper {
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    grid-auto-columns: 1fr;
    grid-column-gap: 5rem;
    grid-row-gap: 1rem;
    grid-template-columns: 1fr max-content;
    grid-template-rows: auto;
  }
  @media screen and (max-width: 767px) {
    .product_heading-wrapper {
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      grid-row-gap: 2rem;
      grid-template-columns: 1fr;
    }
  }
  .product_heading-wrapper.medium {
    position: static;
    grid-column-gap: 3rem;
  }
  @media screen and (max-width: 479px) {
    .product_heading-wrapper {
      display: block;
    }
  }
  .product_heading {
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0%;
  }
  .product_heading.medium {
    margin-right: 3rem;
  }
  @media screen and (max-width: 767px) {
    .product_heading {
      margin-right: 0rem;
    }
  }
  .button {
    padding-top: 0.65rem;
    padding-right: 1.5rem;
    padding-bottom: 0.65rem;
    padding-left: 1.5rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: hsla(0, 0.00%, 80.00%, 0.00);
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }
  .button:hover {
    background-color: #6e612b;
    color: white;
  }
  @media screen and (max-width: 479px) {
    .button {
      display: inline-block;
    }
  }
  .product_list-item {
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
    position: relative;
  }
  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: transparent;
    position: relative;
  }
  .product-image-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: 10px;
  }
  .product-badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }
  .product-badge {
    padding: 8px 12px;
    border-radius: 8px;
    font-family: Karla, sans-serif;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    width: fit-content;
  }
  .product-badge.unavailable {
    background-color: #9e8c73;
    color: #f5f2d9;
  }
  .product-badge.promotion {
    background-color: #ec8451;
    color: #f5f2d9;
  }
  .product-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    transition: opacity 0.3s ease;
  }
  .product-image.secondary {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  @media (hover: hover) {
    .product-card:hover .product-image.primary {
      opacity: 0;
    }
    .product-card:hover .product-image.secondary {
      opacity: 1;
    }
  }
  .product-info {
    padding: 16px 0 0 0;
    text-align: left;
  }
  .product-title {
    font-family: Karla, sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #6e612b;
    margin: 0 0 8px 0;
    line-height: 1.4;
  }
  .product-price {
    font-family: Karla, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #6e612b;
    margin: 0 0 16px 0;
    display: flex;
    gap: 8px;
    align-items: center;
  }
  .product-price .compare-price {
    text-decoration: line-through;
    color: #999;
    font-weight: 400;
  }
  .product-price .sale-price {
    color: #6e612b;
    font-weight: 600;
  }
  .product-button {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #6e612b;
    border-radius: 8px;
    background-color: transparent;
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 500;
    text-align: center;
    text-decoration: none;
    display: block;
    margin-bottom: 8px;
    transition: all 0.3s ease;
  }
  .product-button:hover {
    background-color: #6e612b;
    color: white;
    text-decoration: none;
  }
  .product-status {
    background-color: #f5f2d9;
    padding: 8px 16px;
    text-align: center;
    font-family: Karla, sans-serif;
    font-size: 12px;
    color: #9e8c73;
    font-weight: 500;
    border-radius: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .section-wrapper {
    padding: 40px 20px;
  }
  @media screen and (max-width: 767px) {
    .section-wrapper {
      padding: 40px 10px;
    }
  }
  .max-width-large {
    width: 100%;
    max-width: 48rem;
  }
  .heading-style-h1 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 2.8rem;
    line-height: 1;
    font-weight: 600;
    margin: 0;
  }
  @media screen and (max-width: 767px) {
    .heading-style-h1 {
      font-size: 2.5rem;
    }
  }
  .hide {
    display: none;
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0%;
  }
  .product_list {
    display: grid;
    justify-items: stretch;
    align-items: start;
    grid-auto-columns: 1fr;
    grid-column-gap: 1rem;
    grid-row-gap: 2rem;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto;
  }
  @media screen and (max-width: 991px) {
    .product_list {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  @media screen and (max-width: 767px) {
    .product_list {
      grid-column-gap: 1.25rem;
      grid-row-gap: 2rem;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media screen and (max-width: 479px) {
    .product_list {
      grid-column-gap: 10px;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .product_button-row {
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    align-items: center;
  }
  .product_button-row.medium {
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
  }
  @media screen and (max-width: 767px) {
    .product_button-row {
      width: 100%;
      justify-content: flex-start;
    }
  }
  .hide-mobile-landscape {
    display: block;
  }
  @media screen and (max-width: 767px) and (orientation: landscape) {
    .hide-mobile-landscape {
      display: none;
    }
  }
  .empty-state {
    text-align: center;
    padding: 2rem;
    color: #6e612b;
    font-family: Karla, sans-serif;
    font-size: 1.1rem;
  }
</style>

<div class="section-wrapper">
  <div>
    <div class="product_component">
      <div class="product_heading-wrapper">
        <div class="product_heading">
          <div class="max-width-large">
            <h2 class="heading-style-h1">
              {{ section.settings.text_heading }}
            </h2>
          </div>
        </div>
        <div class="product_button-row hide-mobile-landscape">
          {% if section.settings.url_button_link != blank and section.settings.text_button_text != blank %}
            <a class="button" href="{{ section.settings.url_button_link }}">
              {{ section.settings.text_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="product_list-wrapper" data-dyn-type="wrapper">
        {% if section.settings.collection_collection != blank and section.settings.collection_collection.products.size > 0 %}
          <div class="product_list" data-dyn-type="list">
            {% for product in section.settings.collection_collection.products limit: section.settings.collection_collection_limit %}
              <div class="product_list-item" data-dyn-type="item" data-dyn-grid="12">
                <div class="product-card">
                  <div class="product-image-wrapper">
                    <div class="product-badges">
                      {% unless product.available %}
                        <span class="product-badge unavailable">Non disponible</span>
                      {% endunless %}
                      {% if product.compare_at_price > product.price %}
                        <span class="product-badge promotion">Promotion</span>
                      {% endif %}
                    </div>
                    
                    {% if product.featured_image %}
                      <img 
                        src="{{ product.featured_image | img_url: '600x' }}" 
                        alt="{{ product.featured_image.alt | default: product.title }}"
                        class="product-image primary"
                        loading="lazy"
                      >
                      {% if product.images[1] %}
                        <img 
                          src="{{ product.images[1] | img_url: '600x' }}" 
                          alt="{{ product.images[1].alt | default: product.title }}"
                          class="product-image secondary"
                          loading="lazy"
                        >
                      {% endif %}
                    {% else %}
                      <div style="width: 100%; height: 200px; background-color: #f0f0f0; display: flex; align-items: center; justify-content: center; color: #999; border-radius: 10px;">
                        Pas d'image
                      </div>
                    {% endif %}
                  </div>
                  
                  <div class="product-info">
                    <h3 class="product-title">{{ product.title }}</h3>
                    <div class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="compare-price">{{ product.compare_at_price | money }}</span>
                        <span class="sale-price">{{ product.price | money }}</span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </div>
                    
                    <a href="{{ product.url }}" class="product-button">
                      Voir le produit
                    </a>
                    
                    {% unless product.available %}
                      <div class="product-status">
                        Non disponible
                      </div>
                    {% endunless %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="empty-state" data-dyn-type="empty">
            {% if section.settings.collection_collection == blank %}
              Veuillez sélectionner une collection dans les paramètres de la section.
            {% else %}
              Aucun produit trouvé dans cette collection.
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "tag": "section",
  "name": "Collection Products",
  "class": "Collection-product-display",
  "settings": [
    {
      "id": "text_heading",
      "type": "text",
      "label": "Titre de la section",
      "default": "Short heading here"
    },
    {
      "id": "text_button_text",
      "type": "text",
      "label": "Texte du bouton",
      "default": "VOIR TOUT"
    },
    {
      "id": "url_button_link",
      "type": "url",
      "label": "Lien du bouton"
    },
    {
      "id": "collection_collection",
      "type": "collection",
      "label": "Collection à afficher"
    },
    {
      "type": "range",
      "id": "collection_collection_limit",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Nombre de produits à afficher",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Collection Products",
      "category": "Collection"
    }
  ]
}
{% endschema %}
