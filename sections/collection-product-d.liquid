<style>
  .product_component {
    display: flex;
    width: 100%;
    flex-direction: column;
    grid-auto-columns: 1fr;
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    grid-template-columns: 0.5fr 1fr;
    grid-template-rows: auto;
  }
  .product_component.medium {
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    grid-template-columns: 1fr;
  }
  .product_heading-wrapper {
    display: flex;
    width: 100%;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    grid-auto-columns: 1fr;
    grid-column-gap: 5rem;
    grid-row-gap: 1rem;
    grid-template-columns: 1fr max-content;
    grid-template-rows: auto;
  }
  @media screen and (max-width: 767px) {
    .product_heading-wrapper {
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      grid-row-gap: 2rem;
      grid-template-columns: 1fr;
    }
  }
  .product_heading-wrapper.medium {
    position: static;
    grid-column-gap: 3rem;
  }
  @media screen and (max-width: 479px) {
    .product_heading-wrapper {
      display: block;
    }
  }
  .product_heading {
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0%;
  }
  .product_heading.medium {
    margin-right: 3rem;
  }
  @media screen and (max-width: 767px) {
    .product_heading {
      margin-right: 0rem;
    }
  }
  .button {
    padding-top: 0.65rem;
    padding-right: 1.5rem;
    padding-bottom: 0.65rem;
    padding-left: 1.5rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: hsla(0, 0.00%, 80.00%, 0.00);
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }
  .button:hover {
    background-color: #6e612b;
    color: white;
  }
  @media screen and (max-width: 479px) {
    .button {
      display: inline-block;
    }
  }
  .product_list-item {
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
    position: relative;
  }
  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: #f0f0f0;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
  }
  .product-image-wrapper {
    position: relative;
    background: #f0f0f0;
    width: 100%;
  }
  .product-badges {
    position: absolute;
    top: 12px;
    left: 12px;
    display: flex;
    gap: 8px;
    z-index: 2;
  }
  .product-badge {
    padding: 6px 12px;
    border-radius: 20px;
    font-family: Karla, sans-serif;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .product-badge.unavailable {
    background-color: #8B7355;
    color: white;
  }
  .product-badge.promotion {
    background-color: #D2691E;
    color: white;
  }
  .product-image {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }
  .product-info {
    padding: 1.5rem 1rem 1rem 1rem;
    text-align: left;
  }
  .product-title {
    font-family: Karla, sans-serif;
    font-size: 1rem;
    font-weight: 400;
    color: #666;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }
  .product-price {
    font-family: Karla, sans-serif;
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    margin: 0 0 1.5rem 0;
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }
  .product-price .compare-price {
    text-decoration: line-through;
    color: #999;
    font-weight: 400;
  }
  .product-price .sale-price {
    color: #333;
    font-weight: 600;
  }
  .product-button {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: transparent;
    font-family: Karla, sans-serif;
    color: #666;
    font-weight: 400;
    text-align: center;
    text-decoration: none;
    display: block;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
  }
  .product-button:hover {
    border-color: #6e612b;
    color: #6e612b;
    text-decoration: none;
  }
  .product-status {
    background-color: #f5f5dc;
    padding: 8px 16px;
    text-align: center;
    font-family: Karla, sans-serif;
    font-size: 12px;
    color: #8B7355;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-radius: 0 0 12px 12px;
    margin: -1rem -1rem 0 -1rem;
  }
  .Div Block 5 {
    padding-top: 60px;
    padding-right: 20px;
    padding-bottom: 60px;
    padding-left: 20px;
  }
  .max-width-large {
    width: 100%;
    max-width: 48rem;
  }
  .heading-style-h1 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 2.8rem;
    line-height: 1;
    font-weight: 600;
    margin: 0;
  }
  @media screen and (max-width: 767px) {
    .heading-style-h1 {
      font-size: 2.5rem;
    }
  }
  .hide {
    display: none;
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 0%;
  }
  .product_list {
    display: grid;
    justify-items: stretch;
    align-items: stretch;
    grid-auto-columns: 1fr;
    grid-column-gap: 1rem;
    grid-row-gap: 1rem;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: auto;
  }
  @media screen and (max-width: 767px) {
    .product_list {
      grid-column-gap: 1.25rem;
      grid-row-gap: 3rem;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .product_list.medium {
    grid-column-gap: 0.9rem;
    grid-template-columns: repeat(3, 1fr);
  }
  @media screen and (max-width: 479px) {
    .product_list {
      grid-column-gap: 10px;
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .product_button-row {
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    align-items: center;
  }
  .product_button-row.medium {
    flex-grow: 0;
    flex-shrink: 0;
    flex-basis: auto;
  }
  @media screen and (max-width: 767px) {
    .product_button-row {
      width: 100%;
      justify-content: flex-start;
    }
  }
  .hide-mobile-landscape {
    display: block;
  }
  @media screen and (max-width: 767px) and (orientation: landscape) {
    .hide-mobile-landscape {
      display: none;
    }
  }
  .empty-state {
    text-align: center;
    padding: 2rem;
    color: #6e612b;
    font-family: Karla, sans-serif;
    font-size: 1.1rem;
  }
</style>

<div class="Div Block 5">
  <div>
    <div class="product_component">
      <div class="product_heading-wrapper">
        <div class="product_heading">
          <div class="max-width-large">
            <h2 class="heading-style-h1">
              {{ section.settings.text_heading }}
            </h2>
          </div>
        </div>
        <div class="product_button-row hide-mobile-landscape">
          {% if section.settings.url_button_link != blank and section.settings.text_button_text != blank %}
            <a class="button" href="{{ section.settings.url_button_link }}">
              {{ section.settings.text_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
      
      <div class="product_list-wrapper" data-dyn-type="wrapper">
        {% if section.settings.collection_collection != blank and section.settings.collection_collection.products.size > 0 %}
          <div class="product_list" data-dyn-type="list">
            {% for product in section.settings.collection_collection.products limit: section.settings.collection_collection_limit %}
              <div class="product_list-item" data-dyn-type="item" data-dyn-grid="12">
                <div class="product-card">
                  <div class="product-image-wrapper">
                    <div class="product-badges">
                      {% unless product.available %}
                        <span class="product-badge unavailable">Non disponible</span>
                      {% endunless %}
                      {% if product.compare_at_price > product.price %}
                        <span class="product-badge promotion">Promotion</span>
                      {% endif %}
                    </div>
                    
                    {% if product.featured_image %}
                      <img 
                        src="{{ product.featured_image | img_url: '300x300' }}" 
                        alt="{{ product.featured_image.alt | default: product.title }}"
                        class="product-image"
                        loading="lazy"
                      >
                    {% else %}
                      <div class="product-image" style="width: 100%; height: 200px; background-color: #ddd; display: flex; align-items: center; justify-content: center; color: #999;">
                        Pas d'image
                      </div>
                    {% endif %}
                  </div>
                  
                  <div class="product-info">
                    <h3 class="product-title">{{ product.title }}</h3>
                    <div class="product-price">
                      {% if product.compare_at_price > product.price %}
                        <span class="compare-price">{{ product.compare_at_price | money }}</span>
                        <span class="sale-price">{{ product.price | money }}</span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </div>
                    
                    <a href="{{ product.url }}" class="product-button">
                      Voir le produit
                    </a>
                    
                    {% unless product.available %}
                      <div class="product-status">
                        Non disponible
                      </div>
                    {% endunless %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          <div class="empty-state" data-dyn-type="empty">
            {% if section.settings.collection_collection == blank %}
              Veuillez sélectionner une collection dans les paramètres de la section.
            {% else %}
              Aucun produit trouvé dans cette collection.
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "tag": "section",
  "name": "Collection Products",
  "class": "Collection-product-display",
  "settings": [
    {
      "id": "text_heading",
      "type": "text",
      "label": "Titre de la section",
      "default": "Short heading here"
    },
    {
      "id": "text_button_text",
      "type": "text",
      "label": "Texte du bouton",
      "default": "VOIR TOUT"
    },
    {
      "id": "url_button_link",
      "type": "url",
      "label": "Lien du bouton"
    },
    {
      "id": "collection_collection",
      "type": "collection",
      "label": "Collection à afficher"
    },
    {
      "type": "range",
      "id": "collection_collection_limit",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Nombre de produits à afficher",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Collection Products",
      "category": "Collection"
    }
  ]
}
{% endschema %}
