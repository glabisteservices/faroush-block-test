<style>
  /* ----- VISIBILITÉ SECTION ----- */
  .product-hero-desktop {
    display: block;
  }

  @media screen and (max-width: 768px) {
    .product-hero-desktop {
      display: none !important;
    }
  }

  /* ----- STYLES GÉNÉRAUX ----- */
  .product-hero-desktop .product-header_add-to-cart-wrapper {
    display: flex;
    flex-direction: column;
    grid-column-gap: 0.5rem;
    grid-row-gap: 0.5rem;
  }
  
  .product-hero-desktop .is-red {
    background-color: hsla(19.74193548387097, 80.31%, 62.16%, 1.00);
    color: #f5f2d9;
  }
  
  .product-hero-desktop .text-size-regular {
    font-family: Karla, sans-serif;
    color: #9e8c73;
    font-size: 1rem;
  }
  
  .product-hero-desktop .button {
    padding: 0.65rem 1.5rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: transparent;
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .product-hero-desktop .button:hover {
    background-color: #6e612b;
    color: #f5f2d9;
  }
  
  .product-hero-desktop .product-item_tag {
    padding: 0.3rem 1.5rem;
    border-radius: 8px;
    background-color: #9e8c73;
    color: white;
    font-size: 0.85rem;
    font-weight: 500;
  }
  
  .product-hero-desktop .heading-style-h4 {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1.25rem;
    line-height: 1.2;
    font-weight: 400;
  }

  /* ----- LAYOUT ----- */
  .product-hero-desktop .product-header_layout {
    display: grid;
    align-items: start;
    grid-template-columns: 1fr 1fr;
    grid-column-gap: 3rem;
    grid-row-gap: 2rem;
  }
  
  @media screen and (max-width: 1024px) {
    .product-hero-desktop .product-header_layout {
      grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
      grid-column-gap: 2rem;
    }
  }
  
  /* ----- GALLERY ----- */
  .product-hero-desktop .product-gallery-container {
    position: relative;
    width: 100%;
  }
  
  .product-hero-desktop .product-gallery-main {
    position: relative;
    width: 100%;
    height: 500px;
    margin-bottom: 1rem;
    overflow: hidden;
    border-radius: 20px;
    background-color: #eee;
  }
  
  .product-hero-desktop .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 0.3s ease;
    display: block;
  }
  
  .product-hero-desktop .gallery-navigation {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
    z-index: 10;
  }
  
  .product-hero-desktop .nav-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background-color: rgba(245, 242, 217, 0.9);
    border: 1px solid #6e612b;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);
  }
  
  .product-hero-desktop .nav-arrow:hover {
    background-color: #6e612b;
    color: #f5f2d9;
  }
  
  .product-hero-desktop .nav-arrow svg {
    width: 1.2rem;
    height: 1.2rem;
    color: currentColor;
  }
  
  .product-hero-desktop .nav-arrow.prev svg {
    transform: rotate(180deg);
  }
  
  .product-hero-desktop .product-thumbnails {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding: 0.5rem 0;
  }
  
  .product-hero-desktop .thumbnail-item {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 10px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }
  
  .product-hero-desktop .thumbnail-item.active {
    border-color: #6e612b;
  }
  
  .product-hero-desktop .thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* ----- DETAILS PRODUIT ----- */
  .product-hero-desktop .product-header_product-details {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1rem 0;
  }
  
  .product-hero-desktop .product-title {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 2rem;
    font-weight: 600;
    margin: 0;
  }
  
  .product-hero-desktop .product-price-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .product-hero-desktop .product-price {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1.6rem;
    font-weight: 600;
  }
  
  .product-hero-desktop .product-compare-price {
    font-family: Karla, sans-serif;
    color: #9e8c73;
    font-size: 1.1rem;
    text-decoration: line-through;
  }
  
  .product-hero-desktop .stock-status {
    font-family: Karla, sans-serif;
    font-size: 0.9rem;
    padding: 0.5rem;
    text-align: center;
    border-radius: 5px;
  }
  
  .product-hero-desktop .in-stock {
    background-color: #e8f5e8;
    color: #2d5a2d;
  }
  
  .product-hero-desktop .out-of-stock {
    background-color: #ffe8e8;
    color: #8b0000;
  }
  
  .product-hero-desktop .product-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }
  
  .product-hero-desktop .product-description {
    font-family: Karla, sans-serif;
    color: #6e612b;
    line-height: 1.6;
  }
  
  .product-hero-desktop .variant-selector {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .product-hero-desktop .variant-label {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 600;
  }
  
  .product-hero-desktop .variant-select {
    padding: 0.75rem 1rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: transparent;
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1rem;
    cursor: pointer;
  }
  
  .product-hero-desktop .add-to-cart-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .product-hero-desktop .add-to-cart-button {
    width: 100%;
    padding: 1rem;
    border: none;
    border-radius: 10px;
    background-color: hsla(19.74193548387097, 80.31%, 62.16%, 1.00);
    font-family: Karla, sans-serif;
    color: #f5f2d9;
    font-weight: 600;
    font-size: 1.1rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .product-hero-desktop .add-to-cart-button:hover {
    background-color: hsla(19.74193548387097, 80.31%, 52.16%, 1.00);
  }
  
  .product-hero-desktop .add-to-cart-button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }
  
  .product-hero-desktop .shipping-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .product-hero-desktop .shipping-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #6e612b;
  }
  
  .product-hero-desktop .shipping-text {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 0.9rem;
  }
</style>

<div class="product-header_component">
  <div
    class="product-header_layout"
    x-data="productGallery({{ product | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})"
    x-init="initGallery()"
  >

    <!-- GALLERY -->
    <div class="product-gallery-container">
      <div class="product-gallery-main">
        <template x-for="(media, index) in product.media" :key="media.id">
          <div x-show="currentImageIndex === index" x-transition:enter.duration.300ms>
            <img
              :src="media.preview_image ? media.preview_image.src.replace('.jpg', '_1000x1000.jpg') : ''"
              :alt="media.alt || product.title"
              class="gallery-image"
              loading="lazy"
            >
          </div>
        </template>

        <div class="gallery-navigation" x-show="product.media.length > 1">
          <button class="nav-arrow prev" @click="previousImage()" :disabled="currentImageIndex === 0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
          <button class="nav-arrow next" @click="nextImage()" :disabled="currentImageIndex === product.media.length - 1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>

      <div class="product-thumbnails" x-show="product.media.length > 1">
        <template x-for="(media, index) in product.media" :key="media.id">
          <div
            class="thumbnail-item"
            :class="{ 'active': currentImageIndex === index }"
            @click="setCurrentImage(index)"
          >
            <img
              :src="media.preview_image ? media.preview_image.src.replace('.jpg', '_200x200.jpg') : ''"
              :alt="media.alt || product.title"
              class="thumbnail-image"
              loading="lazy"
            >
          </div>
        </template>
      </div>
    </div>

    <!-- DETAILS PRODUIT -->
    <div class="product-header_product-details">
      <h1 class="product-title">
        {{ product.title }}
      </h1>

      <div class="product-price-wrapper">
        <span
          class="product-price"
          x-text="formatPrice(selectedVariant.price)"
        >
          {{ product.selected_or_first_available_variant.price | money }}
        </span>

        <span
          class="product-compare-price"
          x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price"
          x-text="formatPrice(selectedVariant.compare_at_price)"
        >
          {{ product.selected_or_first_available_variant.compare_at_price | money }}
        </span>

        <span
          class="product-item_tag"
          x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price"
        >
          Sale
        </span>
      </div>

      <div
        class="stock-status {% if product.selected_or_first_available_variant.available %}in-stock{% else %}out-of-stock{% endif %}"
        :class="selectedVariant.available ? 'in-stock' : 'out-of-stock'"
        x-text="selectedVariant.available ? 'En stock' : 'Rupture de stock'"
      >
        {% if product.selected_or_first_available_variant.available %}
          En stock
        {% else %}
          Rupture de stock
        {% endif %}
      </div>

      {% if section.settings.show_product_tags and product.tags.size > 0 %}
        <div class="product-tags">
          {% for tag in product.tags limit: section.settings.max_tags_display %}
            <span class="product-item_tag">{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}

      {% if product.description != blank %}
        <div class="product-description">
          {{ product.description }}
        </div>
      {% endif %}

      {% unless product.has_only_default_variant %}
        {% for option in product.options_with_values %}
          <div class="variant-selector">
            <label class="variant-label">{{ option.name }}</label>
            <select
              class="variant-select"
              @change="updateSelectedVariant({{ forloop.index0 }}, $event.target.value)"
            >
              {% for value in option.values %}
                <option
                  value="{{ value | escape }}"
                  {% if option.selected_value == value %}selected{% endif %}
                >
                  {{ value }}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endfor %}
      {% endunless %}

      {% if section.settings.show_shipping_info %}
        <div class="shipping-info">
          <svg class="shipping-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <span class="shipping-text">
            {{ section.settings.shipping_text }}
          </span>
        </div>
      {% endif %}

      <div class="add-to-cart-section">
        <button
          class="add-to-cart-button"
          :disabled="!selectedVariant.available"
          @click="addToCart()"
          x-text="selectedVariant.available ? 'Ajouter au panier' : 'Rupture de stock'"
        >
          Ajouter au panier
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  if (typeof productGallery === 'undefined') {
    function productGallery(product, initialVariant) {
      return {
        product: product,
        selectedVariant: initialVariant,
        selectedOptions: [],
        currentImageIndex: 0,

        initGallery() {
          if (this.selectedVariant && this.product.options) {
            this.selectedOptions = this.product.options.map((option, index) => {
              return this.selectedVariant['option' + (index + 1)];
            });
          }
        },

        nextImage() {
          if (this.currentImageIndex < this.product.media.length - 1) {
            this.currentImageIndex++;
          }
        },

        previousImage() {
          if (this.currentImageIndex > 0) {
            this.currentImageIndex--;
          }
        },

        setCurrentImage(index) {
          this.currentImageIndex = index;
        },

        updateSelectedVariant(optionIndex, value) {
          this.selectedOptions[optionIndex] = value;

          const matchingVariant = this.product.variants.find((variant) => {
            return this.selectedOptions.every((option, idx) => {
              return variant['option' + (idx + 1)] === option;
            });
          });

          if (matchingVariant) {
            this.selectedVariant = matchingVariant;

            const newUrl = new URL(window.location);
            newUrl.searchParams.set('variant', matchingVariant.id);
            window.history.replaceState({}, '', newUrl);
          }
        },

        formatPrice(price) {
          return new Intl.NumberFormat('fr-FR', {
            style: 'currency',
            currency: 'EUR'
          }).format(price / 100);
        },

        addToCart() {
          if (!this.selectedVariant || !this.selectedVariant.id || !this.selectedVariant.available) return;

          const formData = {
            items: [
              {
                id: this.selectedVariant.id,
                quantity: 1
              }
            ]
          };

          fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
          })
            .then((response) => response.json())
            .then((data) => {
              window.dispatchEvent(new CustomEvent('cart:updated', { detail: data }));
              console.log('Produit ajouté au panier (desktop):', data);
            })
            .catch((error) => {
              console.error('Erreur lors de l’ajout au panier (desktop):', error);
            });
        }
      };
    }
  }
</script>

