<style>
  [x-cloak] { display: none !important; }

  .product-header_component {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 1rem 3rem;
    box-sizing: border-box;
  }

  .product-header_layout {
    display: grid;
    grid-template-columns: 1.1fr 0.9fr;
    grid-column-gap: 3rem;
    grid-row-gap: 2rem;
    align-items: flex-start;
  }

  @media screen and (max-width: 768px) {
    .product-header_component {
      padding: 1.5rem 1rem 2rem;
    }
    .product-header_layout {
      grid-template-columns: 1fr;
      grid-column-gap: 0;
      grid-row-gap: 1.5rem;
    }
  }

  /* === GALLERY === */
  .product-gallery-container {
    position: relative;
    width: 100%;
  }

  .product-gallery-main {
    position: relative;
    width: 100%;
    height: 480px;
    margin-bottom: 1rem;
    overflow: hidden;
    border-radius: 20px;
    background-color: #f4f0e8;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: opacity 0.3s ease;
  }

  @media screen and (max-width: 768px) {
    .product-gallery-main {
      height: auto;
      min-height: 260px;
    }
    .gallery-image {
      width: 100%;
      height: auto;
      object-fit: contain;
    }
  }

  .gallery-navigation {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    display: flex;
    gap: 0.5rem;
    z-index: 2;
  }

  @media screen and (max-width: 768px) {
    .gallery-navigation {
      display: none;
    }
  }

  .nav-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background-color: rgba(245, 242, 217, 0.9);
    border: 1px solid #6e612b;
    border-radius: 50%;
    cursor: pointer;
    transition: all 0.25s ease;
    backdrop-filter: blur(5px);
  }

  .nav-arrow:hover {
    background-color: #6e612b;
    color: #f5f2d9;
  }

  .nav-arrow svg {
    width: 1.2rem;
    height: 1.2rem;
    color: currentColor;
  }

  .nav-arrow.prev svg {
    transform: rotate(180deg);
  }

  /* Thumbnails */
  .product-thumbnails {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding: 0.5rem 0;
    margin-top: 0.5rem;
    scrollbar-width: none;
  }

  .product-thumbnails::-webkit-scrollbar {
    display: none;
  }

  .thumbnail-item {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    border-radius: 10px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid transparent;
    transition: border-color 0.2s ease;
  }

  .thumbnail-item.active {
    border-color: #6e612b;
  }

  .thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  @media screen and (max-width: 768px) {
    .thumbnail-item {
      width: 72px;
      height: 72px;
    }
  }

  /* === DETAILS PRODUIT === */
  .product-header_product-details {
    display: flex !important;
    flex-direction: column;
    gap: 1.3rem;
    padding: 0;
  }

  @media screen and (max-width: 768px) {
    .product-header_product-details {
      padding: 0 0.25rem;
    }
  }

  .product-title {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1.8rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
  }

  @media screen and (max-width: 768px) {
    .product-title {
      font-size: 1.5rem;
    }
  }

  .product-price-wrapper {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .product-price {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .product-compare-price {
    font-family: Karla, sans-serif;
    color: #9e8c73;
    font-size: 1.1rem;
    text-decoration: line-through;
  }

  .product-item_tag {
    padding: 0.3rem 1rem;
    border-radius: 999px;
    background-color: #e74c3c;
    color: #ffffff;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .stock-status {
    font-family: Karla, sans-serif;
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    width: max-content;
  }

  .stock-status.in-stock {
    background-color: #e8f5e8;
    color: #2d5a2d;
  }

  .stock-status.out-of-stock {
    background-color: #ffe8e8;
    color: #8b0000;
  }

  .product-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .product-tags .product-item_tag {
    background-color: #9e8c73;
    font-size: 0.8rem;
  }

  .product-description {
    font-family: Karla, sans-serif;
    color: #6e612b;
    line-height: 1.6;
  }

  /* Variantes */
  .variant-selector {
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .variant-label {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .variant-select {
    padding: 0.75rem 1rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: transparent;
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 1rem;
    cursor: pointer;
  }

  /* Livraison */
  .shipping-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 0;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .shipping-icon {
    width: 1.5rem;
    height: 1.5rem;
    color: #6e612b;
  }

  .shipping-text {
    font-family: Karla, sans-serif;
    color: #6e612b;
    font-size: 0.9rem;
  }

  /* Add to cart */
  .add-to-cart-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .add-to-cart-button {
    width: 100%;
    padding: 1rem;
    border: none;
    border-radius: 10px;
    background-color: hsla(19.74, 80.31%, 62.16%, 1);
    font-family: Karla, sans-serif;
    color: #f5f2d9;
    font-weight: 600;
    font-size: 1.05rem;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }

  .add-to-cart-button:hover {
    background-color: hsla(19.74, 80.31%, 52.16%, 1);
  }

  .add-to-cart-button:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }
</style>

