      "limit": 1
    },
    {
      "type": "add-to-cart",
      "name": "Bouton d'ajout au panier",
      "limit": 1
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "Product Hero (Desktop)",
      "category": "Liquify"
    }
  ],
  "enabled_on": {
    "templates": [
      "product"
    ]
  }
}
{% endschema %}
