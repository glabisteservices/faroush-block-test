    },
    {
      "type": "number",
      "id": "max_tags_display",
      "label": "Nombre maximum de tags à afficher",
      "default": 3
    }
  ],
  "presets": [
    {
      "name": "Product hero 2",
      "category": "Liquify"
    }
  ],
  "enabled_on": {
    "templates": [
      "product"
    ]
  }
}
{% endschema %}
