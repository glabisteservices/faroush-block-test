{% comment %}
  SECTION : Product Hero Mobile
  - Affichée uniquement sur mobile (<= 768px)
  - Cache la section desktop .Section-produit-fiche sur mobile
{% endcomment %}

<style>
  [x-cloak] { display: none !important; }

  /* Affichage / masquage des 2 sections */
  .Section-produit-fiche-mobile {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .Section-produit-fiche-mobile {
      display: block;
    }
    .Section-produit-fiche {
      display: none !important;
    }
  }

  /* ===== LAYOUT MOBILE ===== */

  .product-hero-mobile {
    width: 100%;
  }

  .product-header_layout-mobile {
    display: flex;
    flex-direction: column;
    gap: 1.75rem;
  }

  /* === GALLERY === */

  .product-gallery-container {
    position: relative;
    width: 100%;
  }

  .product-gallery-main {
    position: relative;
    width: 100%;
    background-color: #f4efe7;
    overflow: hidden;
    aspect-ratio: 4 / 5; /* proche de tes visuels 1080x1350 */
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .gallery-navigation {
    position: absolute;
    right: 0.9rem;
    bottom: 0.9rem;
    display: flex;
    gap: 0.5rem;
    z-index: 5;
  }

  .nav-arrow {
    width: 2.8rem;
    height: 2.8rem;
    border-radius: 999px;
    border: 1px solid #6e612b;
    background-color: rgba(245, 242, 217, 0.96);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    backdrop-filter: blur(6px);
    transition: all 0.2s ease;
  }

  .nav-arrow[disabled] {
    opacity: 0.4;
    cursor: default;
  }

  .nav-arrow:hover {
    background-color: #6e612b;
    color: #f5f2d9;
  }

  .nav-arrow svg {
    width: 1.2rem;
    height: 1.2rem;
  }

  .nav-arrow.prev svg {
    transform: rotate(180deg);
  }

  /* Thumbnails */

  .product-thumbnails {
    display: flex;
    gap: 0.5rem;
    padding: 0.5rem 12px 0.25rem 12px;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .thumbnail-item {
    flex: 0 0 auto;
    width: 64px;
    height: 64px;
    border-radius: 10px;
    overflow: hidden;
    border: 2px solid transparent;
    cursor: pointer;
    transition: border-color 0.2s ease, transform 0.2s ease;
  }

  .thumbnail-item.is-active {
    border-color: #6e612b;
  }

  .thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* === DETAILS PRODUIT === */

  .product-header_product-details {
    padding: 0 16px 1.5rem 16px;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .product-title {
    font-family: Karla, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    color: #6e612b;
    font-size: 1.6rem;
    line-height: 1.2;
    font-weight: 600;
    margin: 0;
  }

  .product-price-wrapper {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .product-price {
    font-family: Karla;
    color: #6e612b;
    font-size: 1.25rem;
    font-weight: 600;
  }

  .product-compare-price {
    font-family: Karla;
    font-size: 0.95rem;
    color: #9e8c73;
    text-decoration: line-through;
  }

  .product-item_tag {
    padding: 0.25rem 0.9rem;
    border-radius: 999px;
    background-color: #9e8c73;
    color: #ffffff;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .stock-status {
    font-family: Karla;
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
    border-radius: 6px;
    text-align: center;
  }

  .stock-status.in-stock {
    background-color: #e8f6e8;
    color: #285a2a;
  }

  .stock-status.out-of-stock {
    background-color: #ffe5e5;
    color: #8b0000;
  }

  .product-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .product-description {
    font-family: Karla;
    color: #6e612b;
    line-height: 1.6;
    font-size: 0.98rem;
  }

  .variant-selector {
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .variant-label {
    font-family: Karla;
    color: #6e612b;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .variant-select {
    width: 100%;
    padding: 0.75rem 0.9rem;
    border-radius: 10px;
    border: 1px solid #6e612b;
    background-color: #ffffff;
    font-family: Karla;
    color: #6e612b;
    font-size: 0.95rem;
    cursor: pointer;
  }

  .shipping-info {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.75rem 0;
    border-top: 1px solid rgba(0,0,0,0.06);
    border-bottom: 1px solid rgba(0,0,0,0.06);
  }

  .shipping-icon {
    width: 1.4rem;
    height: 1.4rem;
    color: #6e612b;
  }

  .shipping-text {
    font-family: Karla;
    font-size: 0.9rem;
    color: #6e612b;
  }

  .add-to-cart-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .add-to-cart-button {
    width: 100%;
    padding: 1rem;
    border-radius: 10px;
    border: none;
    background-color: hsla(19.7419, 80.31%, 62.16%, 1);
    font-family: Karla;
    color: #f5f2d9;
    font-weight: 600;
    font-size: 1.05rem;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
  }

  .add-to-cart-button:hover {
    background-color: hsla(19.7419, 80.31%, 52.16%, 1);
  }

  .add-to-cart-button:disabled {
    background-color: #cccccc;
    cursor: not-allowed;
  }
</style>

<div class="product-hero-mobile">
  <div class="product-header_layout-mobile"
       x-data="productGallery({{ product | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})"
       x-init="initGallery()">

    <!-- ==== GALLERY ==== -->
    <div class="product-gallery-container">
      <div class="product-gallery-main">
        <template x-for="(media, index) in product.media" :key="media.id">
          <div x-show="currentImageIndex === index" x-transition:enter.duration.300ms>
            <img
              :src="media.preview_image ? media.preview_image.src.replace('.jpg', '_1000x1000.jpg') : media.src"
              :alt="media.alt || product.title"
              class="gallery-image"
              loading="lazy">
          </div>
        </template>

        <div class="gallery-navigation" x-show="product.media.length > 1">
          <button class="nav-arrow prev" @click="previousImage()" :disabled="currentImageIndex === 0">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
          <button class="nav-arrow next" @click="nextImage()" :disabled="currentImageIndex === product.media.length - 1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Thumbnails -->
      <div class="product-thumbnails" x-show="product.media.length > 1">
        <template x-for="(media, index) in product.media" :key="media.id">
          <button type="button"
                  class="thumbnail-item"
                  :class="{ 'is-active': currentImageIndex === index }"
                  @click="setCurrentImage(index)">
            <img
              :src="media.preview_image ? media.preview_image.src.replace('.jpg', '_200x200.jpg') : media.src"
              :alt="media.alt || product.title"
              class="thumbnail-image"
              loading="lazy">
          </button>
        </template>
      </div>
    </div>

    <!-- ==== DETAILS PRODUIT ==== -->
    <div class="product-header_product-details">
      <h1 class="product-title">
        {{ product.title }}
      </h1>

      <div class="product-price-wrapper">
        <span class="product-price" x-text="formatPrice(selectedVariant.price)">
          {{ product.selected_or_first_available_variant.price | money }}
        </span>

        <span class="product-compare-price"
              x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price"
              x-text="formatPrice(selectedVariant.compare_at_price)">
          {{ product.selected_or_first_available_variant.compare_at_price | money }}
        </span>

        <span class="product-item_tag"
              x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price">
          Promo
        </span>
      </div>

      <div class="stock-status"
           :class="selectedVariant.available ? 'in-stock' : 'out-of-stock'"
           x-text="selectedVariant.available ? 'En stock' : 'Rupture de stock'">
        {% if product.selected_or_first_available_variant.available %}
          En stock
        {% else %}
          Rupture de stock
        {% endif %}
      </div>

      {% if section.settings.show_product_tags and product.tags.size > 0 %}
        <div class="product-tags">
          {% for tag in product.tags limit: section.settings.max_tags_display %}
            <span class="product-item_tag">{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}

      <div class="product-description">
        {{ product.description }}
      </div>

      {% if product.options.size > 0 %}
        {% for option in product.options_with_values %}
          <div class="variant-selector">
            <label class="variant-label">{{ option.name }}</label>
            <select class="variant-select"
                    @change="updateSelectedVariant({{ forloop.index0 }}, $event.target.value)">
              {% for value in option.values %}
                <option value="{{ value | escape }}"
                  {% if option.selected_value == value %}selected{% endif %}>
                  {{ value }}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endfor %}
      {% endif %}

      {% if section.settings.show_shipping_info %}
        <div class="shipping-info">
          <svg class="shipping-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <span class="shipping-text">
            {{ section.settings.shipping_text }}
          </span>
        </div>
      {% endif %}

      <div class="add-to-cart-section">
        <button class="add-to-cart-button"
                :disabled="!selectedVariant.available"
                @click="addToCart()"
                x-text="selectedVariant.available ? 'Ajouter au panier' : 'Rupture de stock'">
          {% if product.selected_or_first_available_variant.available %}
            Ajouter au panier
          {% else %}
            Rupture de stock
          {% endif %}
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function productGallery(product, initialVariant) {
    return {
      product: product,
      selectedVariant: initialVariant,
      selectedOptions: [],
      currentImageIndex: 0,

      initGallery() {
        if (this.selectedVariant && this.product.options) {
          this.selectedOptions = this.product.options.map((option, index) => {
            return this.selectedVariant['option' + (index + 1)];
          });
        }
      },

      nextImage() {
        if (this.currentImageIndex < this.product.media.length - 1) {
          this.currentImageIndex++;
        }
      },

      previousImage() {
        if (this.currentImageIndex > 0) {
          this.currentImageIndex--;
        }
      },

      setCurrentImage(index) {
        this.currentImageIndex = index;
      },

      updateSelectedVariant(optionIndex, value) {
        this.selectedOptions[optionIndex] = value;
        const matchingVariant = this.product.variants.find(variant => {
          return this.selectedOptions.every((option, index) => {
            return variant['option' + (index + 1)] === option;
          });
        });

        if (matchingVariant) {
          this.selectedVariant = matchingVariant;
          const newUrl = new URL(window.location);
          newUrl.searchParams.set('variant', matchingVariant.id);
          window.history.replaceState({}, '', newUrl);
        }
      },

      formatPrice(price) {
        return new Intl.NumberFormat('fr-FR', {
          style: 'currency',
          currency: 'EUR'
        }).format(price / 100);
      },

      addToCart() {
        if (!this.selectedVariant || !this.selectedVariant.id || !this.selectedVariant.available) return;

        const formData = {
          items: [{
            id: this.selectedVariant.id,
            quantity: 1
          }]
        };

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
          window.dispatchEvent(new CustomEvent('cart:updated', { detail: data }));
          console.log('Produit ajouté au panier (mobile):', data);
        })
        .catch(error => {
          console.error("Erreur lors de l'ajout au panier (mobile):", error);
        });
      }
    }
  }
</script>

{% schema %}
{
  "tag": "section",
  "name": "Product Hero Mobile",
  "class": "Section-produit-fiche-mobile",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_shipping_info",
      "label": "Afficher les informations de livraison",
      "default": true
    },
    {
      "type": "text",
      "id": "shipping_text",
      "label": "Texte de livraison",
      "default": "Livraison 1 - 3 jours"
    },
    {
      "type": "checkbox",
      "id": "show_product_tags",
      "label": "Afficher les tags produit",
      "default": true
    },
    {
      "type": "number",
      "id": "max_tags_display",
      "label": "Nombre maximum de tags à afficher",
      "default": 3
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  },
  "presets": [
    {
      "name": "Product Hero Mobile"
    }
  ]
}
{% endschema %}
