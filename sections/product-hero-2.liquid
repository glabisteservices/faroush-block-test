<style>
  [x-cloak] {
    visibility: hidden !important;
  }

  .product-header2_component {
    width: 100%;
    margin: 0 auto;
    padding: 1.25rem 0.75rem 2rem;
    box-sizing: border-box;
    max-width: 640px;
  }

  .product-header2_layout {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* GALLERY */

  .product2-gallery-container {
    width: 100%;
  }

  .product2-gallery-main {
    position: relative;
    width: 100%;
    background-color: #f3eee6;
    border-radius: 16px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }

  .product2-gallery-main::before {
    content: "";
    display: block;
    padding-bottom: 100%;
  }

  .product2-gallery-main > * {
    position: absolute;
    inset: 0;
  }

  .gallery2-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    display: block;
  }

  .gallery2-navigation {
    position: absolute;
    bottom: 0.6rem;
    right: 0.6rem;
    display: flex;
    gap: 0.4rem;
    z-index: 5;
  }

  .nav2-arrow {
    width: 2.4rem;
    height: 2.4rem;
    border-radius: 999px;
    border: 1px solid #6e612b;
    background-color: rgba(245, 242, 217, 0.95);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all .2s ease;
  }

  .nav2-arrow[disabled] {
    opacity: 0.4;
    cursor: default;
  }

  .nav2-arrow svg {
    width: 1rem;
    height: 1rem;
  }

  .nav2-arrow.prev svg {
    transform: rotate(180deg);
  }

  .product2-thumbnails {
    display: flex;
    gap: 0.4rem;
    overflow-x: auto;
  }

  .thumb2-item {
    flex: 0 0 auto;
    width: 64px;
    height: 64px;
    border-radius: 10px;
    overflow: hidden;
    border: 2px solid transparent;
    background-color: #f3eee6;
    cursor: pointer;
  }

  .thumb2-item.active {
    border-color: #c9b466;
  }

  .thumb2-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* DETAILS */

  .product2-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .product2-title {
    font-family: Karla;
    font-size: 1.4rem;
    font-weight: 600;
    color: #6e612b;
    margin: 0;
  }

  .product2-price-wrapper {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.4rem 0.6rem;
  }

  .product2-price {
    font-family: Karla;
    font-size: 1.2rem;
    font-weight: 600;
    color: #6e612b;
  }

  .product2-compare-price {
    font-family: Karla;
    font-size: 0.95rem;
    color: #b7a58b;
    text-decoration: line-through;
  }

  .product2-tag {
    padding: 0.2rem 0.7rem;
    border-radius: 999px;
    background-color: #9e8c73;
    color: #fff;
    font-size: 0.75rem;
    font-family: Karla;
  }

  .product2-stock {
    font-family: Karla;
    font-size: 0.85rem;
    padding: 0.45rem 0.6rem;
    border-radius: 8px;
  }

  .product2-stock.in-stock {
    background-color: #e8f6e8;
    color: #246b2a;
  }

  .product2-stock.out-of-stock {
    background-color: #ffe5e5;
    color: #9c1c1c;
  }

  .product2-tags-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .product2-description {
    font-family: Karla;
    font-size: 0.9rem;
    color: #6e612b;
    line-height: 1.5;
  }

  .product2-variant-selector {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .product2-variant-label {
    font-family: Karla;
    font-size: 0.9rem;
    color: #6e612b;
    font-weight: 600;
  }

  .product2-variant-select {
    padding: 0.8rem 0.9rem;
    border-radius: 10px;
    border: 1px solid #6e612b;
    font-family: Karla;
    font-size: 0.9rem;
    color: #6e612b;
    background-color: #fff;
  }

  .product2-shipping {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    padding-block: 0.6rem;
    border-block: 1px solid rgba(0, 0, 0, 0.08);
  }

  .product2-shipping-icon {
    width: 1.2rem;
    height: 1.2rem;
    color: #6e612b;
  }

  .product2-shipping-text {
    font-family: Karla;
    font-size: 0.85rem;
    color: #6e612b;
  }

  .product2-atc-wrap {
    margin-top: 0.5rem;
  }

  .product2-atc-btn {
    width: 100%;
    padding: 0.9rem 1rem;
    border-radius: 999px;
    border: none;
    background-color: hsla(19.74193548387097, 80.31%, 62.16%, 1);
    color: #f5f2d9;
    font-family: Karla;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .product2-atc-btn:hover {
    background-color: hsla(19.74193548387097, 80.31%, 52.16%, 1);
  }

  .product2-atc-btn:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }
</style>

<div class="product-header2_component">
  <div
    class="product-header2_layout"
    x-data="productGallery({{ product | json | escape }}, {{ product.selected_or_first_available_variant | json | escape }})"
    x-init="initGallery()"
  >
    <!-- GALLERY -->
    <div class="product2-gallery-container">
      <div class="product2-gallery-main">
        <template x-for="(media, index) in product.media" :key="media.id">
          <div x-show="currentImageIndex === index">
            <img
              class="gallery2-image"
              loading="lazy"
              :src="media.preview_image ? media.preview_image.src : media.src"
              :alt="media.alt || product.title"
            >
          </div>
        </template>
      </div>

      <template x-if="product.media && product.media.length > 1">
        <div class="gallery2-navigation">
          <button
            type="button"
            class="nav2-arrow prev"
            @click="previousImage()"
            :disabled="currentImageIndex === 0"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
          <button
            type="button"
            class="nav2-arrow next"
            @click="nextImage()"
            :disabled="!product.media || currentImageIndex === product.media.length - 1"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      </template>

      <template x-if="product.media && product.media.length > 1">
        <div class="product2-thumbnails">
          <template x-for="(media, index) in product.media" :key="'m-' + media.id">
            <button
              type="button"
              class="thumb2-item"
              :class="{ 'active': currentImageIndex === index }"
              @click="setCurrentImage(index)"
            >
              <img
                class="thumb2-img"
                loading="lazy"
                :src="media.preview_image ? media.preview_image.src : media.src"
                :alt="media.alt || product.title"
              >
            </button>
          </template>
        </div>
      </template>
    </div>

    <!-- DETAILS -->
    <div class="product2-details">
      <h1 class="product2-title">
        {{ product.title }}
      </h1>

      <div class="product2-price-wrapper">
        <span class="product2-price" x-text="formatPrice(selectedVariant.price)">
          {{ product.selected_or_first_available_variant.price | money }}
        </span>

        <span
          class="product2-compare-price"
          x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price"
          x-text="formatPrice(selectedVariant.compare_at_price)"
        >
          {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
            {{ product.selected_or_first_available_variant.compare_at_price | money }}
          {% endif %}
        </span>

        <span
          class="product2-tag"
          x-show="selectedVariant.compare_at_price && selectedVariant.compare_at_price > selectedVariant.price"
        >
          Promo
        </span>
      </div>

      <div
        class="product2-stock in-stock"
        :class="selectedVariant.available ? 'in-stock' : 'out-of-stock'"
        x-text="selectedVariant.available ? 'En stock' : 'Rupture de stock'"
      >
        {% if product.selected_or_first_available_variant.available %}
          En stock
        {% else %}
          Rupture de stock
        {% endif %}
      </div>

      {% if section.settings.show_product_tags and product.tags.size > 0 %}
        <div class="product2-tags-row">
          {% for tag in product.tags limit: section.settings.max_tags_display %}
            <span class="product2-tag">{{ tag }}</span>
          {% endfor %}
        </div>
      {% endif %}

      <div class="product2-description">
        {{ product.description }}
      </div>

      {% if product.options_with_values.size > 0 %}
        {% for option in product.options_with_values %}
          <div class="product2-variant-selector">
            <label class="product2-variant-label">{{ option.name }}</label>
            <select
              class="product2-variant-select"
              @change="updateSelectedVariant({{ forloop.index0 }}, $event.target.value)"
            >
              {% for value in option.values %}
                <option
                  value="{{ value | escape }}"
                  {% if option.selected_value == value %}selected{% endif %}
                >
                  {{ value }}
                </option>
              {% endfor %}
            </select>
          </div>
        {% endfor %}
      {% endif %}

      {% if section.settings.show_shipping_info %}
        <div class="product2-shipping">
          <svg class="product2-shipping-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <span class="product2-shipping-text">
            {{ section.settings.shipping_text }}
          </span>
        </div>
      {% endif %}

      <div class="product2-atc-wrap">
        <button
          type="button"
          class="product2-atc-btn"
          :disabled="!selectedVariant.available"
          @click="addToCart()"
          x-text="selectedVariant.available ? '{{ 'products.product.add_to_cart' | t | escape }}' : '{{ 'products.product.sold_out' | t | escape }}'"
        >
          {% if product.selected_or_first_available_variant.available %}
            {{ 'products.product.add_to_cart' | t }}
          {% else %}
            {{ 'products.product.sold_out' | t }}
          {% endif %}
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  /* On réutilise exactement la même fonction que dans product-hero */
  function productGallery(product, initialVariant) {
    return {
      product: product,
      selectedVariant: initialVariant,
      selectedOptions: [],
      currentImageIndex: 0,

      initGallery() {
        if (this.selectedVariant && this.product.options) {
          this.selectedOptions = this.product.options.map((option, index) => {
            return this.selectedVariant['option' + (index + 1)];
          });
        }
      },

      nextImage() {
        if (!this.product.media) return;
        if (this.currentImageIndex < this.product.media.length - 1) {
          this.currentImageIndex++;
        }
      },

      previousImage() {
        if (this.currentImageIndex > 0) {
          this.currentImageIndex--;
        }
      },

      setCurrentImage(index) {
        this.currentImageIndex = index;
      },

      updateSelectedVariant(optionIndex, value) {
        this.selectedOptions[optionIndex] = value;

        var matchingVariant = this.product.variants.find(function (variant) {
          return this.product.options.every(function (optionName, index) {
            var selected = this.selectedOptions[index];
            if (!selected) return true;
            return variant['option' + (index + 1)] === selected;
          }, this);
        }, this);

        if (matchingVariant) {
          this.selectedVariant = matchingVariant;

          var url = new URL(window.location.href);
          url.searchParams.set('variant', matchingVariant.id);
          window.history.replaceState({}, '', url.toString());
        }
      },

      formatPrice(price) {
        if (typeof price !== 'number') return '';
        return new Intl.NumberFormat('fr-FR', {
          style: 'currency',
          currency: '{{ cart.currency.iso_code | default: shop.currency }}'
        }).format(price / 100);
      },

      addToCart() {
        if (!this.selectedVariant || !this.selectedVariant.available) return;

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            '
