    "blocks": [
        {
            "name": "social-media-icon",
            "type": "social-media-icon",
            "settings": [
                {
                    "id": "url_link",
                    "type": "url",
                    "label": "Link"
                },
                {
                    "id": "image_image",
                    "type": "image_picker",
                    "label": "Image"
                }
            ]
        },
        {
            "type": "@app"
        }
    ],
    "settings": [
        {
            "id": "url_link",
            "type": "url",
            "label": "Link"
        },
        {
            "id": "text_text",
            "type": "text",
            "label": "Text",
            "default": "10% offert sur votre prochaine commande"
        }
    ],
    "presets": [
        {
            "name": "Header-announcement",
            "category": "Liquify",
            "blocks": [
                {
                    "type": "social-media-icon"
                }
            ]
        }
    ]
} {% endschema %}
