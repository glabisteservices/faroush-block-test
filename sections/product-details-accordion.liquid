<style>
  .Dropdown Toggle {
    width: 100%;
    padding-left: 0px;
    cursor: pointer;
    border: none;
    background: none;
    text-align: left;
  }
  .product-details-accordion {
    padding-left: 20px
  }
  .product-details-accordion.medium {
    padding-right: 20px
  }
  .Dropdown {
    width: 100%;
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #6e612b;
    font-family: Karla
  }
  .heading-style-h4 {
    font-family: Karla;
    color: #6e612b;
    font-size: 1.25rem;
    line-height: 1.2;
    font-weight: 400
  }
  @media screen and (max-width: 767px) {
    .heading-style-h4 {
      font-size: 1.25rem
    }
  }
  @media screen and (max-width: 479px) {
    .heading-style-h4 {
      font-size: 1.25rem
    }
  }
  .product-details-accordion-container {
    width: 50%;
    padding-left: 0px;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    border-bottom-color: #6e612b
  }
  .product-details-accordion-container.medium {
    width: 100%
  }
  .texte-weigt-bold {
    font-weight: 500;
    text-transform: none
  }
  .Dropdown List {
    position: static;
    margin-bottom: 40px;
    display: none;
  }
  .Dropdown List.main_open {
    padding-left: 20px;
    background-color: hsla(0, 0.00%, 80.00%, 0.00);
    display: block;
  }
  .Dropdown List.medium_open {
    padding-left: 0px;
    display: block;
  }
  .Icon {
    transition: transform 0.3s ease;
  }
  .Dropdown Toggle[aria-expanded="true"] .Icon::after {
    content: "−";
  }
  .Dropdown Toggle .Icon::after {
    content: "+";
    color: #6e612b;
    font-weight: bold;
  }
</style>

<div class="product-details-accordion-container">
  <!-- Détails produit -->
  {% if product.metafields.custom.details_product != blank %}
  <div class="Dropdown">
    <div class="Dropdown Toggle" data-dropdown="details" aria-expanded="false">
      <div class="Icon"></div>
      <div class="heading-style-h4 texte-weigt-bold">
        {{ section.settings.details_title | default: "Détails produit" }}
      </div>
    </div>
    <nav class="Dropdown List" data-dropdown-content="details">
      <div class="Rich Text Block">{{ product.metafields.custom.details_product }}</div>
    </nav>
  </div>
  {% endif %}

  <!-- Matière -->
  {% if product.metafields.custom.texte_matiere_v2 != blank %}
  <div class="Dropdown">
    <div class="Dropdown Toggle" data-dropdown="matiere" aria-expanded="false">
      <div class="Icon"></div>
      <div class="heading-style-h4 texte-weigt-bold">
        {{ section.settings.matiere_title | default: "Matière & composition" }}
      </div>
    </div>
    <nav class="Dropdown List" data-dropdown-content="matiere">
      <div class="Rich Text Block">{{ product.metafields.custom.texte_matiere_v2 }}</div>
    </nav>
  </div>
  {% endif %}

  <!-- Livraison & retours -->
  {% if product.metafields.custom.livraison_retours != blank %}
  <div class="Dropdown">
    <div class="Dropdown Toggle" data-dropdown="livraison" aria-expanded="false">
      <div class="Icon"></div>
      <div class="heading-style-h4 texte-weigt-bold">
        {{ section.settings.livraison_title | default: "Livraison & retours" }}
      </div>
    </div>
    <nav class="Dropdown List" data-dropdown-content="livraison">
      <div class="Rich Text Block">{{ product.metafields.custom.livraison_retours }}</div>
    </nav>
  </div>
  {% endif %}

  <!-- Conseils d'entretien -->
  {% if product.metafields.custom.conseils_d_entretien != blank %}
  <div class="Dropdown">
    <div class="Dropdown Toggle" data-dropdown="entretien" aria-expanded="false">
      <div class="Icon"></div>
      <div class="heading-style-h4 texte-weigt-bold">
        {{ section.settings.entretien_title | default: "Conseils d'entretien" }}
      </div>
    </div>
    <nav class="Dropdown List" data-dropdown-content="entretien">
      <div class="Rich Text Block">{{ product.metafields.custom.conseils_d_entretien }}</div>
    </nav>
  </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const dropdownToggles = document.querySelectorAll('.Dropdown Toggle');
  
  dropdownToggles.forEach(function(toggle) {
    toggle.addEventListener('click', function() {
      const dropdownId = this.getAttribute('data-dropdown');
      const content = document.querySelector('[data-dropdown-content="' + dropdownId + '"]');
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      
      // Fermer tous les autres accordéons
      dropdownToggles.forEach(function(otherToggle) {
        if (otherToggle !== toggle) {
          otherToggle.setAttribute('aria-expanded', 'false');
          const otherContent = document.querySelector('[data-dropdown-content="' + otherToggle.getAttribute('data-dropdown') + '"]');
          if (otherContent) {
            otherContent.classList.remove('main_open', 'medium_open');
          }
        }
      });
      
      // Basculer l'accordéon actuel
      if (isExpanded) {
        this.setAttribute('aria-expanded', 'false');
        content.classList.remove('main_open', 'medium_open');
      } else {
        this.setAttribute('aria-expanded', 'true');
        content.classList.add('main_open');
      }
    });
  });
});
</script>

