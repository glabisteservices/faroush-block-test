      "id": "matiere_title",
      "type": "text",
      "label": "Titre - Matière",
      "default": "Matière & composition"
    },
    {
      "id": "livraison_title",
      "type": "text",
      "label": "Titre - Livraison",
      "default": "Livraison & retours"
    },
    {
      "id": "entretien_title",
      "type": "text",
      "label": "Titre - Entretien",
      "default": "Conseils d'entretien"
    }
  ],
  "presets": [
    {
      "name": "Détails produit accordéon",
      "category": "Produit"
    }
  ],
  "enabled_on": {
    "templates": [
      "product"
    ]
  }
}
{% endschema %}
