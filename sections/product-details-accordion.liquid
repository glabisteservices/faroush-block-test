<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=chevron_right" />

<style>
  .product-details-accordion .dropdown-toggle {
    width: 100%;
    padding: 15px 0;
    padding-left: 0px;
    border: none;
    background: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    z-index: auto;
  }
  
  .product-details-accordion {
    padding-left: 20px;
  }
  
  .product-details-accordion.medium {
    padding-right: 20px;
  }
  
  .dropdown {
    width: 100%;
    border-top: 1px solid #6e612b;
    border-top-style: solid;
    border-top-width: 1px;
    border-top-color: #6e612b;
    font-family: Karla;
  }
  
  .dropdown:last-child {
    border-bottom: 1px solid #6e612b;
    border-bottom-style: solid;
    border-bottom-width: 1px;
    border-bottom-color: #6e612b;
  }
  
  .heading-style-h4 {
    font-family: Karla;
    color: #6e612b;
    font-size: 1.25rem;
    line-height: 1.2;
    font-weight: 400;
    margin: 0;
  }
  
  @media screen and (max-width: 767px) {
    .heading-style-h4 {
      font-size: 1.25rem;
    }
  }
  
  @media screen and (max-width: 479px) {
    .heading-style-h4 {
      font-size: 1.25rem;
    }
  }
  
  .product-details-accordion-container {
    width: 50%;
    padding-left: 0px;
  }
  
  .product-details-accordion-container.medium {
    width: 100%;
  }
  
  @media screen and (max-width: 767px) {
    .product-details-accordion-container {
      width: 100%;
      padding-right: 10px;
    }
    
    /* Padding supplémentaire à droite pour le contenu des dropdowns sur mobile */
    .dropdown-content {
      padding-right: 10px;
    }
  }
  
  .texte-weight-bold {
    font-weight: 500;
    text-transform: none;
  }
  
  .dropdown-content {
    display: none;
    padding: 0 0 20px 0;
    margin-bottom: 40px;
    position: static;
  }
  
  .dropdown-content.open {
    display: block;
    padding-left: 20px;
    background-color: hsla(0, 0%, 80%, 0);
  }
  
  .dropdown-content.medium-open {
    padding-left: 0px;
  }
  
  /* Styles spécifiques aux flèches de l'accordéon produit uniquement */
  .product-details-accordion-container .dropdown-icon {
    transition: transform 0.3s ease;
    font-size: 1.2em;
    color: #6e612b;
    margin-left: auto;
    font-family: 'Material Symbols Outlined';
    font-weight: normal;
    font-style: normal;
    line-height: 1;
    letter-spacing: normal;
    text-transform: none;
    display: inline-block;
    white-space: nowrap;
    word-wrap: normal;
    direction: ltr;
    -webkit-font-feature-settings: 'liga';
    -webkit-font-smoothing: antialiased;
    transform: rotate(90deg); /* Commence pointant vers le bas */
  }
  
  .product-details-accordion-container .dropdown-toggle[aria-expanded="true"] .dropdown-icon {
    transform: rotate(270deg); /* Rotation pour pointer vers le haut quand ouvert */
  }
  
  .rich-text-content {
    color: #6e612b;
    line-height: 1.5;
    font-family: Karla, Arial, sans-serif;
  }
  
  .rich-text-content p {
    margin-bottom: 10px;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  /* Styles pour améliorer l'affichage du rich text - tout en #6e612b et Karla */
  .rich-text-content h1, .rich-text-content h3, 
  .rich-text-content h4, .rich-text-content h5, .rich-text-content h6 {
    margin-top: 1em;
    margin-bottom: 0.5em;
    font-weight: bold;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  /* H2 spécifiques avec margins réduites et même taille que le corps de texte */
  .rich-text-content h2 {
    margin-top: 20px;
    margin-bottom: 20px;
    font-weight: bold;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
    font-size: inherit; /* Même taille que le corps de texte */
  }
  
  .rich-text-content ul, .rich-text-content ol {
    margin-left: 0;
    margin-bottom: 10px;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  .rich-text-content li {
    margin-bottom: 5px;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  .rich-text-content strong {
    font-weight: bold;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  .rich-text-content em {
    font-style: italic;
    color: #6e612b;
    font-family: Karla, Arial, sans-serif;
  }
  
  /* S'assurer que TOUT le contenu dans les dropdowns soit avec Karla et la bonne couleur */
  .dropdown-content * {
    color: #6e612b !important;
    font-family: Karla, Arial, sans-serif !important;
  }
  
  /* Règle spécifique pour les éléments de texte dans les dropdowns */
  .dropdown-content,
  .dropdown-content p,
  .dropdown-content span,
  .dropdown-content div,
  .dropdown-content h1,
  .dropdown-content h2,
  .dropdown-content h3,
  .dropdown-content h4,
  .dropdown-content h5,
  .dropdown-content h6,
  .dropdown-content li,
  .dropdown-content ul,
  .dropdown-content ol,
  .dropdown-content strong,
  .dropdown-content em,
  .dropdown-content b,
  .dropdown-content i {
    font-family: Karla, Arial, sans-serif !important;
    color: #6e612b !important;
  }
</style>

<div class="product-details-accordion-container">
  <!-- Détails produit -->
  {% if product.metafields.custom.details_produit != blank %}
  <div class="dropdown">
    <button class="dropdown-toggle" aria-expanded="false" data-dropdown="details">
      <div class="heading-style-h4 texte-weight-bold">
        {{ section.settings.details_title | default: "Détails produit" }}
      </div>
      <div class="dropdown-icon">chevron_right</div>
    </button>
    <div class="dropdown-content" data-dropdown-content="details">
      <div class="rich-text-content">
        <!-- Solution 1: Si c'est un rich text metafield -->
        {{ product.metafields.custom.details_produit | metafield_tag }}
        
        <!-- Solution 2: Alternative si la solution 1 ne fonctionne pas -->
        <!-- {{ product.metafields.custom.details_produit.value }} -->
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Matière -->
  {% if product.metafields.custom.texte_matiere_v2 != blank %}
  <div class="dropdown">
    <button class="dropdown-toggle" aria-expanded="false" data-dropdown="matiere">
      <div class="heading-style-h4 texte-weight-bold">
        {{ section.settings.matiere_title | default: "Matière & composition" }}
      </div>
      <div class="dropdown-icon">chevron_right</div>
    </button>
    <div class="dropdown-content" data-dropdown-content="matiere">
      <div class="rich-text-content">
        <!-- Même correction pour ce metafield -->
        {{ product.metafields.custom.texte_matiere_v2 | metafield_tag }}
      </div>
    </div>
  </div>
  {% endif %}

  <!-- Livraison & retours -->
  {% if shop.metafields.custom.livraison_retours != blank %}
  <div class="dropdown">
    <button class="dropdown-toggle" aria-expanded="false" data-dropdown="livraison">
      <div class="heading-style-h4 texte-weight-bold">
        {{ section.settings.livraison_title | default: "Livraison & retours" }}
      </div>
      <div class="dropdown-icon">chevron_right</div>
    </button>
    <div class="dropdown-content" data-dropdown-content="livraison">
      {{ shop.metafields.custom.livraison_retours | metafield_tag }}
    </div>
  </div>
  {% endif %}

  <!-- Conseils d'entretien -->
  {% if product.metafields.custom.conseils_d_entretien != blank %}
  <div class="dropdown">
    <button class="dropdown-toggle" aria-expanded="false" data-dropdown="entretien">
      <div class="heading-style-h4 texte-weight-bold">
        {{ section.settings.entretien_title | default: "Conseils d'entretien" }}
      </div>
      <div class="dropdown-icon">chevron_right</div>
    </button>
    <div class="dropdown-content" data-dropdown-content="entretien">
      <div class="rich-text-content">
        <!-- Même correction pour ce metafield -->
        {{ product.metafields.custom.conseils_d_entretien | metafield_tag }}
      </div>
    </div>
  </div>
  {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
  
  dropdownToggles.forEach(function(toggle) {
    toggle.addEventListener('click', function() {
      const dropdownId = this.getAttribute('data-dropdown');
      const content = document.querySelector('[data-dropdown-content="' + dropdownId + '"]');
      const isExpanded = this.getAttribute('aria-expanded') === 'true';
      
      // Fermer tous les autres accordéons
      dropdownToggles.forEach(function(otherToggle) {
        if (otherToggle !== toggle) {
          otherToggle.setAttribute('aria-expanded', 'false');
          const otherContent = document.querySelector('[data-dropdown-content="' + otherToggle.getAttribute('data-dropdown') + '"]');
          if (otherContent) {
            otherContent.classList.remove('open');
          }
        }
      });
      
      // Basculer l'accordéon actuel
      if (isExpanded) {
        this.setAttribute('aria-expanded', 'false');
        content.classList.remove('open');
      } else {
        this.setAttribute('aria-expanded', 'true');
        content.classList.add('open');
      }
    });
  });

  // Gestion du scroll avec offset depuis les ancres
  function handleAnchorScroll() {
    const sectionId = 'shopify-section-template--25237221245314__product_details_accordion_8fNf6L';
    const hash = window.location.hash;
    
    if (hash === '#' + sectionId) {
      const targetElement = document.getElementById(sectionId);
      if (targetElement) {
        // Attendre que la page soit complètement chargée
        setTimeout(() => {
          // Déterminer l'offset selon la taille d'écran
          let offset = 80; // Desktop par défaut
          
          if (window.innerWidth <= 768) {
            offset = 50; // Mobile
          } else if (window.innerWidth <= 1024) {
            offset = 60; // Tablet
          }
          
          // Calculer la position finale
          const targetPosition = targetElement.offsetTop - offset;
          
          // Scroller vers la position correcte sans animation pour éviter les conflits
          window.scrollTo(0, targetPosition);
          
          // Forcer le repositionnement après un délai pour contrer les autres scripts
          setTimeout(() => {
            window.scrollTo(0, targetPosition);
          }, 200);
          
          setTimeout(() => {
            window.scrollTo(0, targetPosition);
          }, 500);
          
        }, 200); // Délai plus long pour laisser tout se charger
      }
    }
  }

  // Écouter les changements d'ancre
  window.addEventListener('hashchange', handleAnchorScroll);
  
  // Vérifier au chargement de la page
  handleAnchorScroll();
});
</script>

