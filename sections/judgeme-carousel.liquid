<div class="judgeme-carousel-section">
  <div class="page-width">
    <!-- Start of Judge.me code --> 
    <div class='jdgm-carousel-wrapper'> 
      {% assign jm_metafields = shop.metafields.judgeme %} 
      <div class='jdgm-carousel-title-and-link'> 
        <h2 class='jdgm-carousel-title'>{{ section.settings.title }}</h2> 
        <span class='jdgm-all-reviews-rating-wrapper' href='javascript:void(0)'> 
          <span style='display:block' data-score='{{ jm_metafields.all_reviews_rating }}' class='jdgm-all-reviews-rating' aria-label='{{ jm_metafields.all_reviews_rating }} stars' tabindex='0' role='img'></span> 
          <span style='display: block' class='jdgm-carousel-number-of-reviews' data-number-of-reviews='{{ jm_metafields.all_reviews_count }}'> 
            from {{ shop.metafields.judgeme.all_reviews_count }} reviews 
          </span> 
        </span> 
      </div> 
      {{ jm_metafields.featured_carousel }} 
    </div> 
    <!-- End of Judge.me code -->
  </div>
</div>

{% schema %}
{
  "name": "Judge.me Reviews Carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Let customers speak for us"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Judge.me Reviews Carousel"
    }
  ]
}
{% endschema %}

<style>
  .judgeme-carousel-section {
    margin-top: 20px;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: rgba(245, 242, 217, 0.5);
  }

  .jdgm-carousel-wrapper {
    max-width: 100%;
    margin: 0 auto;
    font-family: 'Karla', sans-serif;
    color: #6e612b;
  }

  .jdgm-carousel-title {
    text-align: center;
    margin-bottom: 1rem;
    font-size: 2rem;
    font-family: 'Karla', sans-serif;
    color: #6e612b;
  }

  .jdgm-carousel-title-and-link {
    text-align: center;
    margin-bottom: 2rem;
  }

  .jdgm-all-reviews-rating-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    font-family: 'Karla', sans-serif;
    color: #6e612b;
  }

  .jdgm-carousel-number-of-reviews {
    font-family: 'Karla', sans-serif;
    color: #6e612b;
  }

  /* Cibler le contenu des reviews Judge.me */
  .jdgm-carousel-wrapper .jdgm-rev,
  .jdgm-carousel-wrapper .jdgm-rev__body,
  .jdgm-carousel-wrapper .jdgm-rev__title,
  .jdgm-carousel-wrapper .jdgm-rev__text,
  .jdgm-carousel-wrapper .jdgm-rev__buyer-name {
    font-family: 'Karla', sans-serif !important;
    color: #6e612b !important;
  }
</style>
