<style>
  .text-size-tiny {
    font-size: 0.75rem;
    color: #6e612b;
  }
  
  .hide {
    display: none;
  }
  
  .button {
    padding: 0.65rem 1.5rem;
    border: none;
    border-radius: 12px;
    background-color: hsla(53.571428571428534, 58.33%, 90.59%, 1.00);
    font-family: Karla;
    color: hsla(48.35820895522387, 43.79%, 30.00%, 1.00);
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.3s ease;
    display: block !important;
    width: auto !important;
    max-width: 300px;
  }
  
  .button:hover {
    opacity: 0.9;
  }
  
  .form_input {
    width: 100% !important;
    max-width: 400px;
    min-height: 2.6rem;
    margin-top: 10px;
    margin-bottom: 0px;
    padding: 0.5rem 1rem;
    border: 1px solid #6e612b;
    border-radius: 10px;
    background-color: transparent;
    font-family: Karla;
    color: #6e612b;
    display: block !important;
  }
  
  .form_input:focus {
    outline: none;
    border-color: #a6d4f2;
    box-shadow: 0 0 0 2px rgba(166, 212, 242, 0.3);
  }
  
  .form_checkbox {
    display: flex !important;
    margin-bottom: 0px;
    padding-left: 0rem;
    flex-direction: row !important;
    align-items: flex-start;
    justify-content: flex-start;
    text-align: left;
    width: 100%;
    max-width: 400px;
  }
  
  .div-block {
    width: 100%;
    max-width: 600px;
  }
  
  .div-block.medium {
    width: 100%;
    max-width: 650px;
  }
  
  @media screen and (max-width: 767px) {
    .div-block {
      width: 80%;
    }
  }
  
  @media screen and (max-width: 479px) {
    .div-block {
      width: 100%;
    }
  }
  
  .footer_form-block {
    width: 100%;
    margin-bottom: 0rem;
  }
  
  .footer_form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 0.75rem;
    width: 100%;
  }
  
  @media screen and (max-width: 479px) {
    .footer_form {
      flex-direction: column;
      grid-row-gap: 12px;
      grid-template-columns: 1fr;
    }
  }
  
  .newsletter-form {
    display: flex;
    padding: 0 20px;
    justify-content: center;
    align-items: center;
    background-color: transparent;
  }
  
  @media screen and (max-width: 479px) {
    .newsletter-form {
      padding: 0 10px;
    }
  }
  
  .heading-style-h1 {
    font-family: Karla;
    color: #6e612b;
    font-size: 2.8rem;
    line-height: 1.1;
    font-weight: 600;
    margin-bottom: 1rem;
    text-align: left;
  }
  
  @media screen and (max-width: 767px) {
    .heading-style-h1 {
      font-size: 2.5rem;
    }
  }
  
  .form_checkbox-icon {
    margin: 0.3rem 0.5rem 0rem 0rem;
    padding: 0px;
    flex: 0 0 auto;
    width: 0.875rem;
    height: 0.875rem;
    border-radius: 0.125rem;
  }
  
  .form_checkbox-icon:checked {
    background-size: 90%;
  }
  
  .form_checkbox-icon:focus {
    box-shadow: 0 0 0.25rem 0rem rgba(56, 152, 236, 1);
  }
  
  .footer_newsletter {
    display: flex;
    width: 100%;
    padding: 2.5rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    border-radius: 15px;
    background-color: #a6d4f2;
    color: black;
  }
  
  @media screen and (max-width: 479px) {
    .footer_newsletter {
      padding: 1.7rem 10px;
    }
  }
  
  .form_field-label {
    font-family: Karla;
    color: #6e612b;
    margin-bottom: 0.5rem;
    display: block;
    text-align: left;
  }
  
  @media screen and (max-width: 767px) {
    .form_field-label {
      margin-top: 10px;
      line-height: 1.1;
    }
  }
  
  .form-title {
    font-size: 2rem;
  }
  
  @media screen and (max-width: 767px) {
    .form-title {
      font-size: 1.6rem;
    }
  }
  
  .text-color-red {
    color: #dc3545;
  }
  
  .success-message,
  .error-message {
    padding: 1rem;
    border-radius: 8px;
    margin-top: 1rem;
    text-align: center;
  }
  
  .success-message {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
  }
  
  .error-message {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
  }
</style>

<div class="newsletter-form">
  <div class="footer_newsletter">
    <div class="div-block">
      <h2 class="heading-style-h1 form-title">
        {{ section.settings.text_heading }}
      </h2>
      
      <label class="form_field-label" for="newsletter-email-{{ section.id }}">
        {{ section.settings.text_paragraph }}
      </label>
      
      {% form 'customer', return_to: request.path %}
        {% if form.posted_successfully? %}
          <div class="success-message">
            <p>{{ section.settings.success_message | default: 'Merci ! Votre inscription a été confirmée !' }}</p>
          </div>
        {% else %}
          <div class="footer_form">
            <input 
              class="form_input" 
              id="newsletter-email-{{ section.id }}" 
              name="contact[email]" 
              maxlength="256" 
              placeholder="{{ section.settings.placeholder_text }}" 
              type="email" 
              required
              {% if form.errors contains 'email' %}aria-invalid="true"{% endif %}
            >
            
            {% if form.errors %}
              <div class="text-size-tiny text-color-red">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}
            
            {% if section.settings.show_marketing_checkbox %}
              <input type="hidden" name="contact[accepts_marketing]" value="false">
              <div class="form_checkbox">
                <input 
                  class="form_checkbox-icon" 
                  type="checkbox" 
                  name="contact[accepts_marketing]" 
                  id="accepts-marketing-{{ section.id }}" 
                  value="true"
                  {% if section.settings.marketing_default_checked %}checked{% endif %}
                >
                <label class="form_checkbox-label text-size-tiny" for="accepts-marketing-{{ section.id }}">
                  {{ section.settings.text_checkbox }}
                </label>
              </div>
            {% endif %}
            
            <button class="button" type="submit">
              {{ section.settings.text_button_text }}
            </button>
          </div>
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "header",
      "content": "Contenu"
    },
    {
      "id": "text_heading",
      "type": "text",
      "label": "Titre",
      "default": "Inscrivez-vous à la newsletter et recevez 10% de réduction"
    },
    {
      "id": "text_paragraph",
      "type": "textarea",
      "label": "Description",
      "default": "Ne manquez plus aucune de nos nouveautés, conseils ou événements !"
    },
    {
      "id": "placeholder_text",
      "type": "text",
      "label": "Texte de l'input email",
      "default": "Votre adresse email"
    },
    {
      "id": "text_button_text",
      "type": "text",
      "label": "Texte du bouton",
      "default": "Je m'inscris à la Newsletter"
    },
    {
      "type": "header",
      "content": "Marketing"
    },
    {
      "id": "show_marketing_checkbox",
      "type": "checkbox",
      "label": "Afficher la case marketing",
      "default": true
    },
    {
      "id": "marketing_default_checked",
      "type": "checkbox",
      "label": "Case marketing cochée par défaut",
      "default": false
    },
    {
      "id": "text_checkbox",
      "type": "html",
      "label": "Texte de la case marketing",
      "default": "En vous abonnant, vous acceptez notre <a href=\"/policies/privacy-policy\">Politique de Confidentialité</a> et consentez à recevoir des actualités de notre entreprise."
    },
    {
      "type": "header",
      "content": "Messages"
    },
    {
      "id": "success_message",
      "type": "text",
      "label": "Message de succès",
      "default": "Merci ! Votre inscription a été confirmée !"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Footer"
    }
  ]
}
{% endschema %}
