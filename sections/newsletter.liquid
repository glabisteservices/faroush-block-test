<style>
  /* Reset et styles de base pour forcer l'affichage */
  .newsletter-section * {
    box-sizing: border-box;
  }
  
  /* Conteneur principal avec padding externe */
  .newsletter-section {
    padding: 20px !important;
  }
  
  .newsletter-container {
    width: 100% !important;
    padding: 2.5rem !important;
    background-color: #a6d4f2 !important;
    border-radius: 15px !important;
    display: block !important;
    text-align: center !important;
  }
  
  .newsletter-content {
    max-width: 600px !important;
    margin: 0 auto !important;
    display: block !important;
  }
  
  .newsletter-title {
    font-family: Karla, sans-serif !important;
    color: #6e612b !important;
    font-size: 2.8rem !important;
    font-weight: 600 !important;
    line-height: 1.1 !important;
    margin: 0 0 1rem 0 !important;
    text-align: center !important;
    display: block !important;
  }
  
  .newsletter-description {
    font-family: Karla, sans-serif !important;
    color: #6e612b !important;
    margin: 0 0 1.5rem 0 !important;
    text-align: center !important;
    display: block !important;
  }
  
  .newsletter-form {
    display: block !important;
    width: 100% !important;
  }
  
  .newsletter-input {
    width: 100% !important;
    max-width: 400px !important;
    min-height: 2.6rem !important;
    padding: 0.5rem 1rem !important;
    border: 1px solid #6e612b !important;
    border-radius: 10px !important;
    background-color: transparent !important;
    font-family: Karla, sans-serif !important;
    color: #6e612b !important;
    margin: 0 auto 1rem auto !important;
    display: block !important;
    box-sizing: border-box !important;
  }
  
  .newsletter-input:focus {
    outline: none !important;
    border-color: #a6d4f2 !important;
    box-shadow: 0 0 0 2px rgba(166, 212, 242, 0.3) !important;
  }
  
  .newsletter-checkbox-container {
    display: block !important;
    margin: 1rem auto !important;
    max-width: 400px !important;
    text-align: left !important;
  }
  
  .newsletter-checkbox-wrapper {
    display: flex !important;
    align-items: flex-start !important;
    gap: 0.5rem !important;
    justify-content: flex-start !important;
  }
  
  .newsletter-checkbox {
    width: 0.875rem !important;
    height: 0.875rem !important;
    margin: 0.3rem 0 0 0 !important;
    flex-shrink: 0 !important;
  }
  
  .newsletter-checkbox-label {
    font-size: 0.75rem !important;
    color: #6e612b !important;
    font-family: Karla, sans-serif !important;
    line-height: 1.4 !important;
    flex: 1 !important;
  }
  
  .newsletter-button {
    padding: 0.65rem 1.5rem !important;
    border: none !important;
    border-radius: 12px !important;
    background-color: hsla(53.571428571428534, 58.33%, 90.59%, 1.00) !important;
    font-family: Karla, sans-serif !important;
    color: hsla(48.35820895522387, 43.79%, 30.00%, 1.00) !important;
    font-weight: 500 !important;
    cursor: pointer !important;
    transition: all 0.3s ease !important;
    display: block !important;
    margin: 1rem auto 0 auto !important;
    max-width: 300px !important;
    width: auto !important;
  }
  
  .newsletter-button:hover {
    opacity: 0.9 !important;
  }
  
  .newsletter-error {
    color: #dc3545 !important;
    font-size: 0.75rem !important;
    margin: 0.5rem auto !important;
    text-align: center !important;
    max-width: 400px !important;
  }
  
  .newsletter-success {
    padding: 1rem !important;
    border-radius: 8px !important;
    margin: 1rem auto !important;
    text-align: center !important;
    background-color: #d4edda !important;
    color: #155724 !important;
    border: 1px solid #c3e6cb !important;
    max-width: 500px !important;
  }
  
  @media screen and (max-width: 767px) {
    /* Padding externe mobile */
    .newsletter-section {
      padding: 10px !important;
    }
    
    /* Padding interne mobile pour éviter que le texte touche les bords */
    .newsletter-container {
      padding: 1.5rem 10px !important;
    }
    
    .newsletter-title {
      font-size: 2.2rem !important;
    }
  }
  
  @media screen and (max-width: 479px) {
    .newsletter-title {
      font-size: 1.8rem !important;
    }
    
    .newsletter-container {
      padding: 1.2rem 10px !important;
    }
  }
</style>

<div class="newsletter-section">
  <div class="newsletter-container">
    <div class="newsletter-content">
      <h2 class="newsletter-title">
        {{ section.settings.text_heading }}
      </h2>
      
      <p class="newsletter-description">
        {{ section.settings.text_paragraph }}
      </p>
      
      {% form 'customer', return_to: request.path, class: 'newsletter-form' %}
        {% if form.posted_successfully? %}
          <div class="newsletter-success">
            <p>{{ section.settings.success_message | default: 'Merci ! Votre inscription a été confirmée !' }}</p>
          </div>
        {% else %}
          <input 
            class="newsletter-input" 
            id="newsletter-email-{{ section.id }}" 
            name="contact[email]" 
            maxlength="256" 
            placeholder="{{ section.settings.placeholder_text }}" 
            type="email" 
            required
            {% if form.errors contains 'email' %}aria-invalid="true"{% endif %}
          >
          
          {% if form.errors %}
            <div class="newsletter-error">
              {{ form.errors | default_errors }}
            </div>
          {% endif %}
          
          {% if section.settings.show_marketing_checkbox %}
            <input type="hidden" name="contact[accepts_marketing]" value="false">
            <div class="newsletter-checkbox-container">
              <div class="newsletter-checkbox-wrapper">
                <input 
                  class="newsletter-checkbox" 
                  type="checkbox" 
                  name="contact[accepts_marketing]" 
                  id="accepts-marketing-{{ section.id }}" 
                  value="true"
                  {% if section.settings.marketing_default_checked %}checked{% endif %}
                >
                <label class="newsletter-checkbox-label" for="accepts-marketing-{{ section.id }}">
                  {{ section.settings.text_checkbox }}
                </label>
              </div>
            </div>
          {% endif %}
          
          <!-- Désactiver la protection anti-spam -->
          <div style="position: absolute; left: -5000px;">
            <input type="text" name="contact[body]" tabindex="-1" autocomplete="off">
          </div>
          
          <button class="newsletter-button" type="submit" onclick="showThankYou(event)">
            {{ section.settings.text_button_text }}
          </button>
        {% endif %}
      {% endform %}
      
      <!-- Message de remerciement caché -->
      <div id="newsletter-thank-you-{{ section.id }}" class="newsletter-success" style="display: none;">
        <p>{{ section.settings.success_message | default: 'Merci ! Votre inscription a été confirmée !' }}</p>
      </div>
    </div>
  </div>
</div>

<script>
function showThankYou(event) {
  const button = event.target;
  const form = button.closest('form');
  const emailInput = form.querySelector('input[type="email"]');
  
  // Vérifier que l'email est valide
  if (emailInput.value && emailInput.checkValidity()) {
    // Cacher le formulaire après 1 seconde (temps pour Shopify de traiter)
    setTimeout(function() {
      form.style.display = 'none';
      document.getElementById('newsletter-thank-you-{{ section.id }}').style.display = 'block';
    }, 1000);
  }
}
</script>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "newsletter-section",
  "settings": [
    {
      "type": "header",
      "content": "Contenu"
    },
    {
      "id": "text_heading",
      "type": "text",
      "label": "Titre",
      "default": "Inscrivez-vous à la newsletter et recevez 10% de réduction"
    },
    {
      "id": "text_paragraph",
      "type": "textarea",
      "label": "Description",
      "default": "Ne manquez plus aucune de nos nouveautés, conseils ou événements !"
    },
    {
      "id": "placeholder_text",
      "type": "text",
      "label": "Texte de l'input email",
      "default": "Votre adresse email"
    },
    {
      "id": "text_button_text",
      "type": "text",
      "label": "Texte du bouton",
      "default": "Je m'inscris à la Newsletter"
    },
    {
      "type": "header",
      "content": "Marketing"
    },
    {
      "id": "show_marketing_checkbox",
      "type": "checkbox",
      "label": "Afficher la case marketing",
      "default": true
    },
    {
      "id": "marketing_default_checked",
      "type": "checkbox",
      "label": "Case marketing cochée par défaut",
      "default": false
    },
    {
      "id": "text_checkbox",
      "type": "html",
      "label": "Texte de la case marketing",
      "default": "En vous abonnant, vous acceptez notre <a href=\"/policies/privacy-policy\">Politique de Confidentialité</a> et consentez à recevoir des actualités de notre entreprise."
    },
    {
      "type": "header",
      "content": "Messages"
    },
    {
      "id": "success_message",
      "type": "text",
      "label": "Message de succès",
      "default": "Merci ! Votre inscription a été confirmée !"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Footer"
    }
  ]
}
{% endschema %}
